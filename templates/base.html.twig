<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}SchoolFlow - Système de Gestion{% endblock %}</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&family=Plus+Jakarta+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,400&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest"></script>
    
        <script src="https://cdn.tailwindcss.com"></script>
        <script>
            tailwind.config = {
                darkMode: 'class',
                theme: {
                    extend: {
                        colors: {
                            primary: '#7C3AED',
                            'background-dark': '#0a0a0a',
                            'surface-dark': '#121212',
                            'sidebar-bg': '#0a0a0c',
                            'dashboard-bg': '#0f0f12',
                            charcoal: '#0a0a0a',
                            'dark-gray': '#121212',
                        },
                        fontFamily: {
                            display: ['Outfit', 'sans-serif'],
                            sans: ['Plus Jakarta Sans', 'sans-serif'],
                        },
                        boxShadow: {
                            'neon': '0 0 15px rgba(124, 58, 237, 0.4)',
                            'neon-intense': '0 0 30px rgba(124, 58, 237, 0.6)',
                        }
                    }
                }
            }
        </script>
        <script>
            // Check for saved theme preference or default to dark mode
            if (localStorage.theme === 'light' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: light)').matches)) {
                document.documentElement.classList.remove('dark')
            } else {
                document.documentElement.classList.add('dark')
            }
        </script>
        <style type="text/tailwindcss">
            @layer base {
                body {
                    @apply bg-background-dark text-white font-sans antialiased;
                }
                input[type="text"],
                input[type="email"],
                input[type="password"],
                input[type="date"],
                input[type="tel"],
                select,
                textarea {
                    @apply block w-full px-4 py-3 bg-white/5 text-white placeholder-slate-500 border border-white/10 rounded-xl focus:ring-2 focus:ring-primary focus:border-transparent transition-all outline-none backdrop-blur-md hover:bg-white/10;
                }
                select {
                    @apply appearance-none cursor-pointer;
                    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%2364748b' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
                    background-position: right 1rem center;
                    background-repeat: no-repeat;
                    background-size: 1.5em 1.5em;
                    padding-right: 2.5rem;
                }
                [color-scheme=dark] {
                    color-scheme: dark;
                }
                label {
                    @apply block text-[11px] font-bold text-slate-500 uppercase tracking-[0.2em] mb-2 transition-colors;
                }
                .group:focus-within label {
                    @apply text-primary;
                }
                /* Customize date pickers */
                input[type="date"]::-webkit-calendar-picker-indicator {
                    @apply invert opacity-50 hover:opacity-100 cursor-pointer transition-opacity;
                }
            }
        </style>
    {% block stylesheets %}{% endblock %}
</head>
<body class="h-full bg-background-dark text-slate-200 antialiased font-sans overflow-hidden">
    <div class="flex h-screen overflow-hidden">
        {% if app.user %}
        {# Sidebar #}
        <aside id="sidebar" class="w-64 bg-sidebar-bg flex flex-col border-r border-white/5 transition-all duration-300 ease-in-out relative z-50">
            <div class="p-8 flex items-center justify-between relative whitespace-nowrap">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 bg-primary rounded-xl flex items-center justify-center flex-shrink-0">
                        <i data-lucide="graduation-cap" class="text-white w-6 h-6"></i>
                    </div>
                    <span class="font-bold text-xl tracking-tight sidebar-text">SchoolFlow</span>
                </div>
                <button id="sidebar-toggle" class="p-2 absolute top-8 -right-4 z-50 rounded-lg bg-surface-dark border border-white/10 text-slate-400 hover:text-white hover:border-primary/50 transition-all shadow-xl backdrop-blur-md">
                    <i data-lucide="chevron-left" id="toggle-icon" class="w-4 h-4 transition-transform duration-300 font-bold"></i>
                </button>
            </div>

            <nav class="flex-1 px-4 space-y-2 mt-4 overflow-y-auto custom-scrollbar">
                {% set current_route = app.request.attributes.get('_route') %}

                <a href="{{ path('home') }}" class="flex items-center gap-3 px-4 py-3 rounded-xl transition-all duration-200 {{ current_route == 'home' ? 'bg-primary/15 text-primary border border-primary/20' : 'text-slate-400 hover:bg-white/5 hover:text-slate-200' }}">
                    <i data-lucide="layout-dashboard" class="w-5 h-5 flex-shrink-0"></i>
                    <span class="sidebar-text font-medium text-sm">Tableau de bord</span>
                </a>

                <a href="{{ path('school_index') }}" class="flex items-center gap-3 px-4 py-3 rounded-xl transition-all duration-200 {{ current_route starts with 'school' ? 'bg-primary/15 text-primary border border-primary/20' : 'text-slate-400 hover:bg-white/5 hover:text-slate-200' }}">
                    <i data-lucide="building" class="w-5 h-5 flex-shrink-0"></i>
                    <span class="sidebar-text font-medium text-sm">Écoles</span>
                </a>

                <a href="{{ path('classroom_index') }}" class="flex items-center gap-3 px-4 py-3 rounded-xl transition-all duration-200 {{ current_route starts with 'classroom' ? 'bg-primary/15 text-primary border border-primary/20' : 'text-slate-400 hover:bg-white/5 hover:text-slate-200' }}">
                    <i data-lucide="door-open" class="w-5 h-5 flex-shrink-0"></i>
                    <span class="sidebar-text font-medium text-sm">Classes</span>
                </a>

                <a href="{{ path('teacher_index') }}" class="flex items-center gap-3 px-4 py-3 rounded-xl transition-all duration-200 {{ current_route starts with 'teacher' ? 'bg-primary/15 text-primary border border-primary/20' : 'text-slate-400 hover:bg-white/5 hover:text-slate-200' }}">
                    <i data-lucide="contact" class="w-5 h-5 flex-shrink-0"></i>
                    <span class="sidebar-text font-medium text-sm">Enseignants</span>
                </a>

                <a href="{{ path('course_index') }}" class="flex items-center gap-3 px-4 py-3 rounded-xl transition-all duration-200 {{ current_route starts with 'course' ? 'bg-primary/15 text-primary border border-primary/20' : 'text-slate-400 hover:bg-white/5 hover:text-slate-200' }}">
                    <i data-lucide="book-open" class="w-5 h-5 flex-shrink-0"></i>
                    <span class="sidebar-text font-medium text-sm">Cours</span>
                </a>

                <a href="{{ path('student_index') }}" class="flex items-center gap-3 px-4 py-3 rounded-xl transition-all duration-200 {{ current_route starts with 'student' ? 'bg-primary/15 text-primary border border-primary/20' : 'text-slate-400 hover:bg-white/5 hover:text-slate-200' }}">
                    <i data-lucide="users" class="w-5 h-5 flex-shrink-0"></i>
                    <span class="sidebar-text font-medium text-sm">Étudiants</span>
                </a>

                <a href="{{ path('schedule_index') }}" class="flex items-center gap-3 px-4 py-3 rounded-xl transition-all duration-200 {{ current_route starts with 'schedule' ? 'bg-primary/15 text-primary border border-primary/20' : 'text-slate-400 hover:bg-white/5 hover:text-slate-200' }}">
                    <i data-lucide="calendar" class="w-5 h-5 flex-shrink-0"></i>
                    <span class="sidebar-text font-medium text-sm">Emplois du temps</span>
                </a>

                <a href="{{ path('activity_index') }}" class="flex items-center gap-3 px-4 py-3 rounded-xl transition-all duration-200 {{ current_route starts with 'activity' ? 'bg-primary/15 text-primary border border-primary/20' : 'text-slate-400 hover:bg-white/5 hover:text-slate-200' }}">
                    <i data-lucide="activity" class="w-5 h-5 flex-shrink-0"></i>
                    <span class="sidebar-text font-medium text-sm">Activités récentes</span>
                </a>
            </nav>

            <div class="p-4 mt-auto">
                {# Profile Section with Flyout #}
                <div class="group/profile relative">
                    {# Trigger Button #}
                    <button class="flex w-full items-center gap-3 rounded-2xl border border-white/5 bg-surface-dark p-3 text-left transition-all hover:bg-white/5 hover:border-white/10 group">
                        <div class="flex h-10 w-10 items-center justify-center rounded-full bg-primary/20 text-primary ring-2 ring-white/10 font-bold text-sm">
                            {{ (app.user.firstName ?? app.user.name ?? 'U')|first|upper }}
                        </div>
                        <div class="flex flex-1 flex-col overflow-hidden">
                            <p class="truncate text-sm font-semibold text-white">{{ app.user.firstName|default(app.user.name)|default(app.user.userIdentifier) }}</p>
                            <p class="truncate text-xs text-white/50">Administrateur</p>
                        </div>
                        <i data-lucide="chevron-right" class="text-white/40 transition-all group-hover:translate-x-1 group-hover:text-white w-4 h-4"></i>
                    </button>

                    <div class="flyout-menu absolute left-full bottom-0 z-50 w-[320px] origin-bottom-left ml-2 hidden group-hover/profile:block">
                        <div class="absolute -left-6 top-0 bottom-0 w-6"></div>
                        
                        <div class="flex flex-col overflow-hidden rounded-2xl border border-white/10 bg-[#251b2e] shadow-2xl shadow-black/80 ring-1 ring-white/5">
                            {# Cover Header #}
                            <div class="relative h-28 w-full bg-gradient-to-r from-primary via-purple-900 to-indigo-900 overflow-hidden">
                                <div class="absolute -right-4 -top-4 h-24 w-24 rounded-full bg-white/10 blur-xl"></div>
                                <div class="absolute bottom-0 left-0 h-full w-full flex items-end justify-center px-6 translate-y-1/2">
                                    <div class="relative">
                                        <div class="h-20 w-20 rounded-full border-4 border-[#251b2e] bg-primary/20 flex items-center justify-center text-primary font-bold text-2xl shadow-xl">
                                            {{ (app.user.firstName ?? app.user.name ?? 'U')|first|upper }}
                                        </div>
                                        <div class="absolute bottom-1 right-1 h-4 w-4 rounded-full border-2 border-[#251b2e] bg-green-500"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="mt-12 flex flex-col items-center px-6 pb-6 text-center">
                                <h2 class="text-xl font-bold text-white">{{ app.user.firstName|default(app.user.name)|default(app.user.userIdentifier) }}</h2>
                                <p class="mt-1 text-sm text-white/50">{{ app.user.email ?? 'admin@schoolflow.io' }}</p>
                                <span class="mt-3 inline-flex items-center rounded-full bg-primary/20 px-3 py-1 text-xs font-semibold text-primary ring-1 ring-primary/30">
                                    Administrateur
                                </span>
                            </div>

                            <div class="flex flex-col border-t border-white/5 p-2">
                                <a href="#" class="group flex w-full items-center gap-3 rounded-xl px-4 py-3 text-left transition-all hover:bg-surface-hover">
                                    <div class="flex h-9 w-9 items-center justify-center rounded-lg bg-surface-dark text-white/50 group-hover:bg-primary group-hover:text-white transition-colors">
                                        <i data-lucide="settings" class="w-5 h-5"></i>
                                    </div>
                                    <div class="flex flex-col">
                                        <span class="text-sm font-medium text-white/90 group-hover:text-white">Paramètres</span>
                                        <span class="text-[11px] text-white/40 group-hover:text-white/60">Gérer votre compte</span>
                                    </div>
                                </a>

                                <a href="#" class="group flex w-full items-center gap-3 rounded-xl px-4 py-3 text-left transition-all hover:bg-surface-hover">
                                    <div class="flex h-9 w-9 items-center justify-center rounded-lg bg-surface-dark text-white/50 group-hover:bg-primary group-hover:text-white transition-colors">
                                        <i data-lucide="shield" class="w-5 h-5"></i>
                                    </div>
                                    <div class="flex flex-col">
                                        <span class="text-sm font-medium text-white/90 group-hover:text-white">Sécurité</span>
                                        <span class="text-[11px] text-white/40 group-hover:text-white/60">Mot de passe et authentification</span>
                                    </div>
                                </a>

                                <a href="#" class="group flex w-full items-center gap-3 rounded-xl px-4 py-3 text-left transition-all hover:bg-surface-hover">
                                    <div class="flex h-9 w-9 items-center justify-center rounded-lg bg-surface-dark text-white/50 group-hover:bg-primary group-hover:text-white transition-colors">
                                        <i data-lucide="bell" class="w-5 h-5"></i>
                                    </div>
                                    <div class="flex flex-col">
                                        <span class="text-sm font-medium text-white/90 group-hover:text-white">Notifications</span>
                                        <span class="text-[11px] text-white/40 group-hover:text-white/60">Gérer les alertes</span>
                                    </div>
                                </a>

                                <a href="{{ path('app_logout') }}" class="group flex w-full items-center gap-3 rounded-xl px-4 py-3 text-left transition-all hover:bg-surface-hover">
                                    <div class="flex h-9 w-9 items-center justify-center rounded-lg bg-surface-dark text-white/50 group-hover:bg-red-500/20 group-hover:text-red-400 transition-colors">
                                        <i data-lucide="log-out" class="w-5 h-5"></i>
                                    </div>
                                    <div class="flex flex-col">
                                        <span class="text-sm font-medium text-white/90 group-hover:text-white">Déconnexion</span>
                                        <span class="text-[11px] text-white/40 group-hover:text-white/60">Quitter votre session</span>
                                    </div>
                                </a>
                            </div>

                            <div class="mt-1 border-t border-white/5 bg-black/20 p-4">
                                <div class="flex justify-between px-1 text-[10px] text-white/20">
                                    <span>v1.0.0</span>
                                    <span>SchoolFlow</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </aside>
        {% endif %}

        {# Main Container #}
        <div class="flex-1 flex flex-col min-w-0 bg-dashboard-bg relative overflow-hidden">
            {% if app.user %}
            {# Top Header #}
            <header class="h-20 flex items-center justify-between px-8 gap-6 border-b border-white/5 bg-background-dark/50 backdrop-blur-xl">
                <div class="flex-1 max-w-2xl relative group">
                    <i data-lucide="search" class="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-500 group-focus-within:text-primary transition-colors"></i>
                    <input
                        type="text"
                        placeholder="Rechercher des établissements, cours..."
                        class="w-full bg-white/5 border border-white/5 rounded-2xl pl-12 pr-4 py-3 text-sm text-slate-200 placeholder:text-slate-600 focus:outline-none focus:ring-1 focus:ring-primary/50 focus:bg-white/[0.07] transition-all"
                    />
                </div>

                <div class="flex items-center gap-4">
                    {# Dark Mode Toggle #}
                    <button id="theme-toggle" class="w-10 h-10 rounded-xl border border-white/10 flex items-center justify-center text-slate-500 hover:text-slate-200 hover:bg-white/5 transition-all relative" title="Basculer le thème">
                        <i data-lucide="sun" class="w-5 h-5 hidden dark:block"></i>
                        <i data-lucide="moon" class="w-5 h-5 block dark:hidden"></i>
                    </button>
                    <button class="w-10 h-10 rounded-xl border border-white/10 flex items-center justify-center text-slate-500 hover:text-slate-200 hover:bg-white/5 transition-all relative">
                        <i data-lucide="bell" class="w-5 h-5"></i>
                        <div class="absolute top-2.5 right-2.5 w-2 h-2 bg-rose-500 border-2 border-dashboard-bg rounded-full"></div>
                    </button>
                </div>
            </header>
            {% endif %}

            <div class="flex-1 overflow-y-auto p-8 custom-scrollbar">
                {% for message in app.flashes('success') %}
                    <div class="mb-6 p-4 rounded-xl bg-green-500/10 dark:bg-green-500/10 bg-green-50 border border-green-500/20 dark:border-green-500/20 border-green-200 text-green-400 dark:text-green-400  flex items-center space-x-3">
                        <i data-lucide="check-circle-2" class="w-5 h-5"></i>
                        <span>{{ message }}</span>
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="mb-6 p-4 rounded-xl bg-red-500/10 dark:bg-red-500/10 bg-red-50 border border-red-500/20 dark:border-red-500/20 border-red-200 text-red-400 dark:text-red-400  flex items-center space-x-3">
                        <i data-lucide="alert-circle" class="w-5 h-5"></i>
                        <span>{{ message == 'Invalid credentials' ? 'Mot de passe ou email invalide' : message }}</span>
                    </div>
                {% endfor %}

                {% block body %}{% endblock %}
            </div>
        </div>
    </div>

    {% block javascripts %}{% endblock %}
    
    {# Modal Component #}
    <div id="confirm-modal" class="fixed inset-0 z-[100] hidden">
        {# Backdrop #}
        <div class="absolute inset-0 bg-black/80 backdrop-blur-sm modal-backdrop"></div>
        
        {# Modal Content #}
        <div class="absolute inset-0 flex items-center justify-center p-4">
            <div class="relative w-full max-w-md transform transition-all modal-content">
                <div class="overflow-hidden rounded-2xl border border-white/10 bg-[#251b2e] shadow-2xl">
                    {# Header #}
                    <div class="flex items-center gap-4 border-b border-white/5 bg-white/2 px-6 py-4">
                        <div class="flex h-12 w-12 items-center justify-center rounded-full bg-amber-500/10 text-amber-500">
                            <i data-lucide="alert-triangle" class="w-6 h-6"></i>
                        </div>
                        <h3 class="text-lg font-bold text-white">Confirmation requise</h3>
                    </div>
                    
                    {# Body #}
                    <div class="px-6 py-5">
                        <p id="modal-message" class="text-sm text-slate-300 leading-relaxed">
                            Êtes-vous sûr de vouloir continuer ?
                        </p>
                    </div>
                    
                    {# Footer #}
                    <div class="flex items-center justify-end gap-3 border-t border-white/5 bg-black/20 px-6 py-4">
                        <button type="button" class="modal-cancel rounded-xl border border-white/10 bg-white/5 px-5 py-2.5 text-sm font-semibold text-white transition-all hover:bg-white/10">
                            Annuler
                        </button>
                        <button type="button" id="modal-confirm" class="modal-confirm rounded-xl bg-red-500 px-5 py-2.5 text-sm font-semibold text-white transition-all hover:bg-red-600 hover:shadow-lg hover:shadow-red-500/30">
                            Confirmer
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        lucide.createIcons();

        // Modal Logic
        const modal = document.getElementById('confirm-modal');
        const modalMessage = document.getElementById('modal-message');
        const modalConfirm = document.getElementById('modal-confirm');
        const modalCancel = modal.querySelector('.modal-cancel');
        const modalBackdrop = modal.querySelector('.modal-backdrop');
        let confirmCallback = null;

        function showConfirmModal(message, onConfirm) {
            modalMessage.textContent = message || 'Êtes-vous sûr de vouloir continuer ?';
            confirmCallback = onConfirm;
            modal.classList.remove('hidden');
            
            // Animation d'entrée
            const content = modal.querySelector('.modal-content');
            content.classList.add('scale-95', 'opacity-0');
            setTimeout(() => {
                content.classList.remove('scale-95', 'opacity-0');
                content.classList.add('scale-100', 'opacity-100');
            }, 10);
        }

        function hideModal() {
            const content = modal.querySelector('.modal-content');
            content.classList.remove('scale-100', 'opacity-100');
            content.classList.add('scale-95', 'opacity-0');
            
            setTimeout(() => {
                modal.classList.add('hidden');
                confirmCallback = null;
            }, 150);
        }

        modalConfirm.addEventListener('click', () => {
            if (confirmCallback) {
                confirmCallback();
            }
            hideModal();
        });

        modalCancel.addEventListener('click', hideModal);
        modalBackdrop.addEventListener('click', hideModal);

        // Close on Escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
                hideModal();
            }
        });

        // Theme Toggle
        const themeToggle = document.getElementById('theme-toggle');
        
        if (themeToggle) {
            themeToggle.addEventListener('click', () => {
                document.documentElement.classList.toggle('dark');
                
                if (document.documentElement.classList.contains('dark')) {
                    localStorage.theme = 'dark';
                } else {
                    localStorage.theme = 'light';
                }
                
                // Refresh icons after theme change
                setTimeout(() => lucide.createIcons(), 50);
            });
        }

        // Sidebar Toggle Logic
        const sidebar = document.getElementById('sidebar');
        const sidebarToggle = document.getElementById('sidebar-toggle');
        const toggleIcon = document.getElementById('toggle-icon');
        const sidebarTexts = document.querySelectorAll('.sidebar-text');

        if (sidebarToggle) {
            sidebarToggle.addEventListener('click', () => {
                const isCollapsed = sidebar.classList.toggle('w-64');
                sidebar.classList.toggle('w-20');

                // Rotate icon and handle absolute centering if needed
                toggleIcon.style.transform = sidebar.classList.contains('w-20') ? 'rotate(180deg)' : 'rotate(0deg)';

                // Toggle visibility of labels
                sidebarTexts.forEach(text => {
                    text.classList.toggle('hidden');
                });
            });
        }
    </script>

    <style>
        .custom-scrollbar::-webkit-scrollbar {
            width: 4px;
        }
        .custom-scrollbar::-webkit-scrollbar-track {
            background: transparent;
        }
        .custom-scrollbar::-webkit-scrollbar-thumb {
            background: rgba(124, 58, 237, 0.2);
            border-radius: 10px;
        }
        .custom-scrollbar::-webkit-scrollbar-thumb:hover {
            background: rgba(124, 58, 237, 0.4);
        }
    </style>
</body>
</html>
