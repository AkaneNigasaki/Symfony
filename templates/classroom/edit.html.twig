{% extends 'base.html.twig' %}

{% block title %}Modifier la Classe - SchoolFlow{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-white tracking-tight flex items-center space-x-3">
            <i data-lucide="edit" class="w-8 h-8 text-amber-500"></i>
            <span>Modifier la Classe</span>
        </h1>
        <p class="mt-2 text-slate-400">Modifier les détails de <span class="text-white font-bold">{{ classroom.name }}</span>.</p>
    </div>

    <div class="bg-dark-gray border border-white/5 rounded-2xl overflow-hidden shadow-2xl">
        <form method="post" class="p-8 space-y-8">
            <div class="grid grid-cols-1 gap-8">
                {# School #}
                <div class="group">
                    <label for="school">École *</label>
                    <select id="school" name="school" required class="focus:ring-amber-500/50 focus:border-amber-500/50">
                        {% for school in schools %}
                            <option value="{{ school.id }}" {% if classroom.school and classroom.school.id == school.id %}selected{% endif %}>{{ school.name }}</option>
                        {% endfor %}
                    </select>
                </div>

                {# Name #}
                <div class="group">
                    <label for="name">Nom de la Classe *</label>
                    <input id="name" name="name" value="{{ classroom.name }}" required type="text" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    {# Type #}
                    <div class="group">
                        <label for="type">Type *</label>
                        <select id="type" name="type" required class="focus:ring-amber-500/50 focus:border-amber-500/50">
                            <option value="classroom" {% if classroom.type == 'classroom' %}selected{% endif %}>Classe</option>
                            <option value="lab" {% if classroom.type == 'lab' %}selected{% endif %}>Laboratoire</option>
                            <option value="auditorium" {% if classroom.type == 'auditorium' %}selected{% endif %}>Amphithéâtre</option>
                        </select>
                    </div>

                    {# Capacity #}
                    <div class="group">
                        <label for="capacity">Capacité *</label>
                        <input id="capacity" name="capacity" value="{{ classroom.capacity }}" required min="1" type="number" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                    </div>
                </div>

                {# Location #}
                <div class="group">
                    <label for="location">Emplacement</label>
                    <input id="location" name="location" value="{{ classroom.location }}" type="text" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                </div>

                {# Facilities #}
                <div class="group">
                    <label for="facilities">Équipements</label>
                    <input id="facilities" name="facilities" value="{% if classroom.facilities %}{{ classroom.facilities|join(', ') }}{% endif %}" placeholder="Ex. Projecteur, Tableau Blanc" type="text" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                    <p class="mt-2 text-[10px] text-slate-500 uppercase tracking-wider font-bold">Séparez les équipements par des virgules</p>
                </div>
            </div>

            <div class="pt-8 border-t border-white/5 flex items-center justify-between">
                <a href="{{ path('classroom_show', {id: classroom.id}) }}" class="text-sm font-bold text-slate-500 hover:text-white transition-colors uppercase tracking-widest">
                    Annuler
                </a>
                <button type="submit" class="inline-flex items-center justify-center rounded-xl bg-amber-500 px-8 py-4 text-base font-bold text-white shadow-xl hover:brightness-110 active:scale-[0.98] transition-all">
                    Mettre à jour la Classe
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
