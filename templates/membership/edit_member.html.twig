{% extends 'base.html.twig' %}

{% block title %}Gérer le membre : {{ student.fullName }}{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-4 duration-700">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-white tracking-tight">Gérer le membre</h1>
            <p class="text-slate-400 mt-1">{{ student.fullName }} • {{ student.school.name }}</p>
        </div>
        <a href="{{ path('school_show', {id: student.school.id}) }}" class="px-4 py-2 bg-white/5 hover:bg-white/10 text-slate-300 rounded-xl text-sm font-bold transition-all border border-white/10 flex items-center">
            <i data-lucide="arrow-left" class="w-4 h-4 mr-2"></i>
            Retour à l'école
        </a>
    </div>

    <div class="bg-dark-gray border border-white/5 rounded-2xl overflow-hidden shadow-2xl">
        <div class="px-8 py-6 border-b border-white/5 bg-white/2">
            <h5 class="text-sm font-bold uppercase tracking-widest text-white">Paramètres du profil</h5>
        </div>
        
        <form method="post" class="p-8 space-y-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                {# Role Selection #}
                <div class="space-y-4">
                    <label class="block text-[10px] font-black uppercase tracking-[0.2em] text-slate-500">Rôle au sein de l'école</label>
                    <div class="grid grid-cols-1 gap-4">
                        <label class="relative flex items-center p-4 cursor-pointer rounded-2xl border border-white/5 bg-white/2 hover:bg-white/5 transition-all group">
                            <input type="radio" name="role" value="student" {{ student.role == 'student' ? 'checked' : '' }} class="peer opacity-0 absolute">
                            <div class="w-10 h-10 rounded-xl bg-emerald-500/10 flex items-center justify-center text-emerald-400 group-hover:scale-110 transition-transform">
                                <i data-lucide="graduation-cap" class="w-5 h-5"></i>
                            </div>
                            <div class="ml-4">
                                <p class="text-sm font-bold text-white">Élève / Étudiant</p>
                                <p class="text-[10px] text-slate-500 uppercase tracking-tight">Accès standard à l'apprentissage</p>
                            </div>
                            <div class="ml-auto w-5 h-5 rounded-full border-2 border-slate-700 peer-checked:border-primary peer-checked:bg-primary flex items-center justify-center transition-all">
                                <div class="w-2 h-2 bg-white rounded-full opacity-0 peer-checked:opacity-100"></div>
                            </div>
                        </label>

                        <label class="relative flex items-center p-4 cursor-pointer rounded-2xl border border-white/5 bg-white/2 hover:bg-white/5 transition-all group">
                            <input type="radio" name="role" value="admin" {{ student.role == 'admin' ? 'checked' : '' }} class="peer opacity-0 absolute">
                            <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center text-primary group-hover:scale-110 transition-transform">
                                <i data-lucide="shield" class="w-5 h-5"></i>
                            </div>
                            <div class="ml-4">
                                <p class="text-sm font-bold text-white">Administrateur</p>
                                <p class="text-[10px] text-slate-500 uppercase tracking-tight">Accès complet à la gestion</p>
                            </div>
                            <div class="ml-auto w-5 h-5 rounded-full border-2 border-slate-700 peer-checked:border-primary peer-checked:bg-primary flex items-center justify-center transition-all">
                                <div class="w-2 h-2 bg-white rounded-full opacity-0 peer-checked:opacity-100"></div>
                            </div>
                        </label>
                    </div>
                </div>

                {# Status Selection #}
                <div class="space-y-4">
                    <label class="block text-[10px] font-black uppercase tracking-[0.2em] text-slate-500">Statut de l'adhésion</label>
                    <select name="status" class="w-full bg-white/5 border border-white/10 rounded-xl p-4 text-white focus:ring-2 focus:ring-primary focus:border-transparent transition-all appearance-none outline-none">
                        <option value="accepted" {{ student.status == 'accepted' ? 'selected' : '' }}>Accepté</option>
                        <option value="pending" {{ student.status == 'pending' ? 'selected' : '' }}>En attente</option>
                        <option value="rejected" {{ student.status == 'rejected' ? 'selected' : '' }}>Rejeté</option>
                    </select>
                    <p class="text-[10px] text-slate-500 leading-relaxed italic">
                        Le passage à "En attente" ou "Rejeté" coupera immédiatement l'accès de l'utilisateur à cet établissement.
                    </p>
                </div>
            </div>

            <div class="pt-8 border-t border-white/5 flex items-center justify-between">
                <button type="submit" class="px-8 py-4 bg-primary text-white rounded-xl font-bold flex items-center hover:brightness-110 transition-all shadow-lg shadow-primary/20">
                    <i data-lucide="save" class="w-5 h-5 mr-2"></i>
                    Sauvegarder les modifications
                </button>
                <div class="text-xs text-slate-600 font-mono italic">
                    Dernière mise à jour : {{ student.updatedAt|date('d/m/Y H:i') }}
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}
