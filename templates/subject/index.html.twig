{% extends 'base.html.twig' %}

{% block title %}Matières - Gestion Éducative{% endblock %}

{% block body %}
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8">
    <div>
        <h1 class="text-3xl font-bold text-white tracking-tight flex items-center space-x-3">
            <i data-lucide="book" class="w-8 h-8 text-primary"></i>
            <span>Matières</span>
        </h1>
        <p class="mt-2 text-slate-400">Gérez les matières et leurs enseignants assignés.</p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
        <a href="{{ path('subject_new') }}" class="inline-flex items-center justify-center rounded-xl bg-primary px-4 py-3 text-sm font-bold text-white shadow-sm hover:brightness-110 transition-all">
            <i data-lucide="plus" class="w-5 h-5 mr-2"></i>
            Ajouter une Matière
        </a>
    </div>
</div>

<div class="bg-dark-gray border border-white/5 rounded-2xl overflow-hidden">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-white/5">
            <thead>
                <tr class="bg-white/2">
                    <th scope="col" class="py-4 pl-6 pr-3 text-left text-xs font-bold uppercase tracking-widest text-slate-500">Code & Nom</th>
                    <th scope="col" class="px-3 py-4 text-left text-xs font-bold uppercase tracking-widest text-slate-500">Enseignant</th>
                    <th scope="col" class="px-3 py-4 text-left text-xs font-bold uppercase tracking-widest text-slate-500">Coefficient</th>
                    <th scope="col" class="px-3 py-4 text-left text-xs font-bold uppercase tracking-widest text-slate-500">Heures/Semaine</th>
                    <th scope="col" class="relative py-4 pl-3 pr-6 text-right text-xs font-bold uppercase tracking-widest text-slate-500">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-white/5">
                {% for subject in subjects %}
                    <tr class="group hover:bg-white/2 transition-colors">
                        <td class="whitespace-nowrap py-4 pl-6 pr-3 text-sm">
                            <div class="font-bold text-white group-hover:text-primary transition-colors text-base">{{ subject.name }}</div>
                            <div class="text-xs text-slate-500 uppercase tracking-widest">{{ subject.code }}</div>
                        </td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm text-slate-400">
                            {% if subject.teacher %}
                                <a href="{{ path('teacher_show', {id: subject.teacher.id}) }}" class="hover:text-primary transition-colors">{{ subject.teacher.fullName }}</a>
                            {% else %}
                                <span class="text-slate-600">Non assigné</span>
                            {% endif %}
                        </td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm">
                            <span class="inline-flex items-center px-2 py-0.5 rounded-md text-[10px] font-bold bg-blue-500/10 text-blue-400 border border-blue-500/20">
                                Coef. {{ subject.coefficient }}
                            </span>
                        </td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm text-slate-300">
                            {{ subject.hoursPerWeek }}h
                        </td>
                        <td class="relative whitespace-nowrap py-4 pl-3 pr-6 text-right text-sm font-medium">
                            <div class="flex justify-end space-x-2">
                                <a href="{{ path('subject_show', {id: subject.id}) }}" class="p-2 bg-sky-500/10 text-sky-400 hover:bg-sky-500 hover:text-white rounded-lg transition-all" title="Voir">
                                    <i data-lucide="eye" class="w-4 h-4"></i>
                                </a>
                                <a href="{{ path('subject_edit', {id: subject.id}) }}" class="p-2 bg-amber-500/10 text-amber-500 hover:bg-amber-500 hover:text-white rounded-lg transition-all" title="Modifier">
                                    <i data-lucide="edit" class="w-4 h-4"></i>
                                </a>
                                <button type="button" 
                                    onclick="showConfirmModal('Êtes-vous sûr de vouloir supprimer cette matière ?', () => { 
                                        document.getElementById('delete-form-{{ subject.id }}').submit(); 
                                    })" 
                                    class="p-2 bg-red-500/10 text-red-500 hover:bg-red-500 hover:text-white rounded-lg transition-all" 
                                    title="Supprimer">
                                    <i data-lucide="trash-2" class="w-4 h-4"></i>
                                </button>
                                <form id="delete-form-{{ subject.id }}" method="post" action="{{ path('subject_delete', {id: subject.id}) }}" class="hidden">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ subject.id) }}">
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="px-6 py-12 text-center text-slate-500">Aucune matière trouvée.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
