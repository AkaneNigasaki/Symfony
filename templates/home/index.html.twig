{% extends 'base.html.twig' %}

{% block title %}Project Overview - SchoolFlow{% endblock %}

{% block body %}
<div class="space-y-8 animate-in fade-in slide-in-from-bottom-4 duration-700">

    {# Hero Banner Section #}
    <section class="relative h-72 rounded-2xl overflow-hidden border border-primary/10 group shadow-2xl">
            <img
                class="w-full h-full object-cover opacity-40 group-hover:scale-105 transition-transform duration-1000"
                alt="Abstract dynamic purple background"
                src="https://picsum.photos/seed/nebula/1200/400"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-background-dark via-background-dark/40 to-transparent"></div>
            <div class="absolute bottom-0 left-0 p-10 space-y-2">
                <h2 class="text-4xl font-bold text-white tracking-tight">Bienvenue, {{ app.user.firstName|default(app.user.name)|default(app.user.userIdentifier) }}</h2>
                <p class="text-slate-300 max-w-xl text-lg leading-relaxed">
                    Suivez la performance et les métriques de votre établissement en temps réel avec notre
                    <span class="text-primary font-semibold"> </span> mis à jour.
                </p>
            </div>
        </section>

        {# Metrics Grid #}
        <section class="grid grid-cols-1 md:grid-cols-4 gap-6">
            {# Schools #}
            <div class="bg-surface-dark/60 border border-primary/10 p-6 rounded-xl shadow-lg hover:border-primary/30 transition-colors group">
                <div class="flex justify-between items-start mb-4">
                    <div class="p-3 bg-primary/10 rounded-lg text-primary group-hover:bg-primary/20 transition-colors">
                        <i data-lucide="building" class="w-6 h-6"></i>
                    </div>
                    <span class="text-xs font-bold text-emerald-400 bg-emerald-400/10 px-2 py-1 rounded">
                        Écoles
                    </span>
                </div>
                <h3 class="text-slate-400 text-sm font-medium">Total Établissements</h3>
                <p class="text-3xl font-bold text-white mt-1">{{ stats.schools|default(0) }}</p>
            </div>

            {# Classrooms #}
            <div class="bg-surface-dark/60 border border-primary/10 p-6 rounded-xl shadow-lg hover:border-primary/30 transition-colors group">
                <div class="flex justify-between items-start mb-4">
                    <div class="p-3 bg-primary/10 rounded-lg text-primary group-hover:bg-primary/20 transition-colors">
                        <i data-lucide="door-open" class="w-6 h-6"></i>
                    </div>
                    <span class="text-xs font-bold text-slate-400 bg-white/5 px-2 py-1 rounded">
                        Classes
                    </span>
                </div>
                <h3 class="text-slate-400 text-sm font-medium">Salles actives</h3>
                <p class="text-3xl font-bold text-white mt-1">{{ stats.classrooms|default(0) }}</p>
            </div>

            {# Teachers #}
            <div class="bg-surface-dark/60 border border-primary/10 p-6 rounded-xl shadow-lg hover:border-primary/30 transition-colors group">
                <div class="flex justify-between items-start mb-4">
                    <div class="p-3 bg-primary/10 rounded-lg text-primary group-hover:bg-primary/20 transition-colors">
                        <i data-lucide="contact" class="w-6 h-6"></i>
                    </div>
                    <span class="text-xs font-bold text-emerald-400 bg-emerald-400/10 px-2 py-1 rounded">
                        +2.4%
                    </span>
                </div>
                <h3 class="text-slate-400 text-sm font-medium">Enseignants</h3>
                <p class="text-3xl font-bold text-white mt-1">{{ stats.teachers|default(0) }}</p>
            </div>

            {# Students #}
            <div class="bg-surface-dark/60 border border-primary/10 p-6 rounded-xl shadow-lg hover:border-primary/30 transition-colors group">
                <div class="flex justify-between items-start mb-4">
                    <div class="p-3 bg-primary/10 rounded-lg text-primary group-hover:bg-primary/20 transition-colors">
                        <i data-lucide="users" class="w-6 h-6"></i>
                    </div>
                    <span class="text-xs font-bold text-emerald-400 bg-emerald-400/10 px-2 py-1 rounded">
                        +5.2%
                    </span>
                </div>
                <h3 class="text-slate-400 text-sm font-medium">Étudiants inscrits</h3>
                <p class="text-3xl font-bold text-white mt-1">{{ stats.students|default(0) }}</p>
            </div>
        </section>

        {% if studentSchools is not empty %}
        {# My Learning Section #}
        <section class="bg-surface-dark/40 border border-primary/5 rounded-2xl overflow-hidden shadow-xl">
            <div class="px-6 py-5 border-b border-primary/5 flex justify-between items-center bg-white/5">
                <h3 class="font-semibold text-white tracking-tight flex items-center">
                    <i data-lucide="graduation-cap" class="w-5 h-5 text-primary mr-2"></i>
                    Mon Apprentissage
                </h3>
                <span class="text-xs font-bold text-primary uppercase tracking-widest bg-primary/10 px-3 py-1 rounded-full">
                    {{ studentSchools|length }} École(s) rejointe(s)
                </span>
            </div>
            <div class="p-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for school in studentSchools %}
                    <a href="{{ path('school_show', {id: school.id}) }}" class="flex items-center space-x-4 p-4 bg-white/2 border border-white/5 rounded-xl hover:bg-white/5 hover:border-primary/30 transition-all group">
                        <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center text-primary group-hover:bg-primary/20 transition-colors">
                            <i data-lucide="building" class="w-6 h-6"></i>
                        </div>
                        <div class="flex-1 overflow-hidden">
                            <h4 class="text-white font-bold truncate">{{ school.name }}</h4>
                            <p class="text-slate-500 text-xs truncate">{{ school.address|default('Aucune adresse') }}</p>
                        </div>
                        <i data-lucide="arrow-right" class="w-4 h-4 text-slate-700 group-hover:text-primary transition-colors"></i>
                    </a>
                {% endfor %}
            </div>
        </section>
        {% endif %}

        <div class="grid grid-cols-1 gap-8">
            {# System Activity Log #}
            <section class="bg-surface-dark/40 border border-primary/5 rounded-2xl overflow-hidden shadow-xl">
                <div class="px-6 py-5 border-b border-primary/5 flex justify-between items-center bg-white/5">
                    <h3 class="font-semibold text-white tracking-tight">Activités Récentes du Système</h3>
                    <a href="#" class="text-sm font-medium text-primary hover:text-primary/80 transition-colors">
                        Voir tout
                    </a>
                </div>
                <div class="divide-y divide-white/5 max-h-[400px] overflow-y-auto custom-scrollbar">
                    {% if activities is empty %}
                        <div class="p-10 text-center">
                            <i data-lucide="inbox" class="w-8 h-8 text-slate-600 mx-auto mb-2"></i>
                            <p class="text-slate-500 text-sm">Aucune activité enregistrée.</p>
                        </div>
                    {% else %}
                        {% for activity in activities %}
                            <div class="p-5 flex items-center space-x-4 hover:bg-white/5 transition-colors group">
                                <div class="w-10 h-10 rounded-full flex items-center justify-center bg-primary/10 text-primary group-hover:bg-primary/20 transition-colors">
                                    <i data-lucide="{{ activity.icon|default('activity') }}" class="w-4 h-4"></i>
                                </div>
                                <div class="flex-1">
                                    <p class="text-sm text-white font-medium">{{ activity.description }}</p>
                                    <p class="text-xs text-slate-500">{{ activity.createdAt|format_datetime('short', 'short', locale='fr') }}</p>
                                </div>
                                <span class="text-xs text-slate-500 font-mono tracking-wider">#LOG-{{ activity.id }}</span>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </section>
        </div>
    </div>
</div>
{% endblock %}
