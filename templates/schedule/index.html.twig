{% extends 'base.html.twig' %}

{% block title %}Emplois du Temps - SchoolFlow{% endblock %}

{% block body %}
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8">
    <div>
        <h1 class="text-3xl font-bold text-white tracking-tight flex items-center space-x-3">
            <i data-lucide="calendar-days" class="w-8 h-8 text-primary"></i>
            <span>Emplois du Temps</span>
        </h1>
        <p class="mt-2 text-slate-400">Consultez et gérez l'emploi du temps académique.</p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
        <a href="{{ path('schedule_new') }}" class="inline-flex items-center justify-center rounded-xl bg-primary px-4 py-3 text-sm font-bold text-white shadow-sm hover:brightness-110 transition-all">
            <i data-lucide="calendar-plus" class="w-5 h-5 mr-2"></i>
            Ajouter à l'Emploi du Temps
        </a>
    </div>
</div>

<div class="bg-dark-gray border border-white/5 rounded-2xl overflow-hidden shadow-xl">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-white/5">
            <thead>
                <tr class="bg-white/2">
                    <th scope="col" class="py-4 pl-6 pr-3 text-left text-xs font-bold uppercase tracking-widest text-slate-500">Cours & Salle</th>
                    <th scope="col" class="px-3 py-4 text-left text-xs font-bold uppercase tracking-widest text-slate-500">Horaire</th>
                    <th scope="col" class="px-3 py-4 text-left text-xs font-bold uppercase tracking-widest text-slate-500">Période de Validité</th>
                    <th scope="col" class="relative py-4 pl-3 pr-6 text-right text-xs font-bold uppercase tracking-widest text-slate-500">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-white/5">
                {% set days = ['', 'Lundi', 'Mardi', 'Mercredi', 'Jeudi', 'Vendredi', 'Samedi', 'Dimanche'] %}
                {% for schedule in schedules %}
                    <tr class="group hover:bg-white/2 transition-colors">
                        <td class="whitespace-nowrap py-4 pl-6 pr-3 text-sm">
                            <div class="font-bold text-white group-hover:text-primary transition-colors text-base">{{ schedule.course.code }} - {{ schedule.course.name }}</div>
                            <div class="flex items-center text-xs text-slate-500 mt-1">
                                <i data-lucide="door-open" class="w-3.5 h-3.5 mr-1"></i>
                                <span>{{ schedule.classroom.name }}</span>
                            </div>
                        </td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm">
                            <div class="flex flex-col">
                                <span class="inline-flex items-center w-fit px-2 py-0.5 rounded-md text-[10px] font-bold bg-sky-500/10 text-sky-400 border border-sky-500/20 mb-1 capitalize">
                                    {{ days[schedule.dayOfWeek]|default('Non défini') }}
                                </span>
                                <span class="text-slate-300 font-mono text-xs">{{ schedule.startTime|date('H:i') }} — {{ schedule.endTime|date('H:i') }}</span>
                            </div>
                        </td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm text-slate-500">
                            <div class="flex items-center">
                                <span>{{ schedule.effectiveFrom|date('d/m/Y') }}</span>
                                <span class="mx-2">au</span>
                                {% if schedule.effectiveTo %}
                                    <span>{{ schedule.effectiveTo|date('d/m/Y') }}</span>
                                {% else %}
                                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[9px] font-bold bg-green-500/10 text-green-400 border border-green-500/20 uppercase tracking-tighter">En cours</span>
                                {% endif %}
                            </div>
                        </td>
                        <td class="relative whitespace-nowrap py-4 pl-3 pr-6 text-right text-sm font-medium">
                            <div class="flex justify-end space-x-2">
                                <a href="{{ path('schedule_show', {id: schedule.id}) }}" class="p-2 bg-sky-500/10 text-sky-400 hover:bg-sky-500 hover:text-white rounded-lg transition-all" title="Voir">
                                    <i data-lucide="eye" class="w-4 h-4"></i>
                                </a>
                                <button type="button" 
                                    onclick="showConfirmModal('Êtes-vous sûr de vouloir supprimer ce créneau ?', () => { 
                                        document.getElementById('delete-form-{{ schedule.id }}').submit(); 
                                    })" 
                                    class="p-2 bg-red-500/10 text-red-500 hover:bg-red-500 hover:text-white rounded-lg transition-all" 
                                    title="Supprimer">
                                    <i data-lucide="trash-2" class="w-4 h-4"></i>
                                </button>
                                <form id="delete-form-{{ schedule.id }}" method="post" action="{{ path('schedule_delete', {id: schedule.id}) }}" class="hidden">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ schedule.id) }}">
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="px-6 py-12 text-center text-slate-500">Aucun planning organisé pour le moment.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
