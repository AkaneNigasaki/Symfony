{% extends 'base.html.twig' %}

{% block title %}Modifier {{ subject.name }} - EduManage{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-white tracking-tight flex items-center space-x-3">
            <i data-lucide="edit" class="w-8 h-8 text-amber-500"></i>
            <span>Modifier la Matière</span>
        </h1>
        <p class="mt-2 text-slate-400">Mettez à jour les informations de la matière.</p>
    </div>

    <div class="bg-dark-gray border border-white/5 rounded-2xl overflow-hidden shadow-2xl">
        <form method="post" class="p-8 space-y-8">
            <div class="grid grid-cols-1 gap-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="group">
                        <label for="code">Code de la Matière *</label>
                        <input id="code" name="code" value="{{ subject.code }}" required type="text"/>
                    </div>

                    <div class="group">
                        <label for="name">Nom de la Matière *</label>
                        <input id="name" name="name" value="{{ subject.name }}" required type="text"/>
                    </div>
                </div>

                <div class="group">
                    <label for="description">Description</label>
                    <textarea id="description" name="description" rows="4">{{ subject.description }}</textarea>
                </div>

                <div class="group">
                    <label for="teacher">Enseignant Assigné</label>
                    <select id="teacher" name="teacher">
                        <option value="" class="bg-dark-gray text-slate-400">Aucun enseignant...</option>
                        {% for teacher in teachers %}
                            <option value="{{ teacher.id }}" {% if subject.teacher and teacher.id == subject.teacher.id %}selected{% endif %} class="bg-dark-gray text-white">{{ teacher.fullName }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="group">
                        <label for="coefficient">Coefficient *</label>
                        <input id="coefficient" name="coefficient" value="{{ subject.coefficient }}" required type="number" min="1"/>
                    </div>

                    <div class="group">
                        <label for="hoursPerWeek">Heures par Semaine *</label>
                        <input id="hoursPerWeek" name="hoursPerWeek" value="{{ subject.hoursPerWeek }}" required type="number" min="1"/>
                    </div>
                </div>
            </div>

            <div class="pt-8 border-t border-white/5 flex items-center justify-between">
                <a href="{{ path('subject_index') }}" class="text-sm font-bold text-slate-500 hover:text-white transition-colors uppercase tracking-widest">
                    Annuler
                </a>
                <button type="submit" class="inline-flex items-center justify-center rounded-xl bg-primary px-8 py-4 text-base font-bold text-white shadow-xl hover:brightness-110 active:scale-[0.98] transition-all">
                    Enregistrer les Modifications
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
