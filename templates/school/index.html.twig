{% extends 'base.html.twig' %}

{% block title %}Écoles - SchoolFlow{% endblock %}

{% block body %}
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8">
    <div>
        <h1 class="text-3xl font-bold text-white tracking-tight flex items-center space-x-3">
            <i data-lucide="building" class="w-8 h-8 text-primary"></i>
            <span>Écoles</span>
        </h1>
        <p class="mt-2 text-slate-400">Gérez toutes les écoles enregistrées et leurs entités.</p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
        <a href="{{ path('school_new') }}" class="inline-flex items-center justify-center rounded-xl bg-primary px-4 py-3 text-sm font-bold text-white shadow-sm hover:brightness-110 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary transition-all">
            <i data-lucide="plus-circle" class="w-5 h-5 mr-2"></i>
            Ajouter une École
        </a>
    </div>
</div>

<div class="bg-dark-gray border border-white/5 rounded-2xl overflow-hidden">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-white/5">
            <thead>
                <tr class="bg-white/2">
                    <th scope="col" class="py-4 pl-6 pr-3 text-left text-xs font-bold uppercase tracking-widest text-slate-500">Nom</th>
                    <th scope="col" class="px-3 py-4 text-left text-xs font-bold uppercase tracking-widest text-slate-500">Adresse</th>
                    <th scope="col" class="px-3 py-4 text-left text-xs font-bold uppercase tracking-widest text-slate-500">Contact</th>
                    <th scope="col" class="px-3 py-4 text-left text-xs font-bold uppercase tracking-widest text-slate-500">Entités</th>
                    <th scope="col" class="relative py-4 pl-3 pr-6 text-right text-xs font-bold uppercase tracking-widest text-slate-500">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-white/5">
                {% for school in schools %}
                    <tr class="group hover:bg-white/2 transition-colors">
                        <td class="whitespace-nowrap py-4 pl-6 pr-3 text-sm">
                            <div class="font-bold text-white group-hover:text-primary transition-colors">{{ school.name }}</div>
                        </td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm text-slate-400">
                            {{ school.address ?? '—' }}
                        </td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm text-slate-500">
                            <div class="flex flex-col">
                                {% if school.email %}
                                    <span class="text-slate-300">{{ school.email }}</span>
                                {% endif %}
                                {% if school.phone %}
                                    <span class="text-xs text-slate-500">{{ school.phone }}</span>
                                {% endif %}
                                {% if not school.email and not school.phone %}
                                    <span>—</span>
                                {% endif %}
                            </div>
                        </td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm">
                            <div class="flex space-x-2">
                                <span class="inline-flex items-center px-2 py-0.5 rounded-md text-[10px] font-bold bg-slate-800 text-slate-400 border border-white/5">
                                    {{ school.classrooms|length }} classes
                                </span>
                                <span class="inline-flex items-center px-2 py-0.5 rounded-md text-[10px] font-bold bg-sky-500/10 text-sky-400 border border-sky-500/20">
                                    {{ school.students|length }} étudiants
                                </span>
                                <span class="inline-flex items-center px-2 py-0.5 rounded-md text-[10px] font-bold bg-primary/10 text-primary-400 border border-primary/20">
                                    {{ school.teachers|length }} enseignants
                                </span>
                            </div>
                        </td>
                        <td class="relative whitespace-nowrap py-4 pl-3 pr-6 text-right text-sm font-medium">
                            <div class="flex justify-end space-x-2">
                                <a href="{{ path('school_show', {id: school.id}) }}" class="p-2 bg-sky-500/10 text-sky-400 hover:bg-sky-500 hover:text-white rounded-lg transition-all" title="Voir">
                                    <i data-lucide="eye" class="w-4 h-4"></i>
                                </a>
                                <a href="{{ path('school_edit', {id: school.id}) }}" class="p-2 bg-amber-500/10 text-amber-500 hover:bg-amber-500 hover:text-white rounded-lg transition-all" title="Modifier">
                                    <i data-lucide="edit" class="w-4 h-4"></i>
                                </a>
                                <button type="button" 
                                    onclick="showConfirmModal('Supprimer cette école et toutes les données associées ?', () => { 
                                        document.getElementById('delete-form-{{ school.id }}').submit(); 
                                    })" 
                                    class="p-2 bg-red-500/10 text-red-500 hover:bg-red-500 hover:text-white rounded-lg transition-all" 
                                    title="Supprimer">
                                    <i data-lucide="trash-2" class="w-4 h-4"></i>
                                </button>
                                <form id="delete-form-{{ school.id }}" method="post" action="{{ path('school_delete', {id: school.id}) }}" class="hidden">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ school.id) }}">
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="px-6 py-12 text-center">
                            <i data-lucide="package-2" class="w-12 h-12 text-slate-700 mx-auto mb-2"></i>
                            <p class="text-slate-500">Aucune école trouvée.</p>
                            <a href="{{ path('school_new') }}" class="text-primary hover:text-white text-sm font-bold mt-2 inline-block">Créez votre première école</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
