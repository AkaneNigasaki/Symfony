{% extends 'base.html.twig' %}

{% block title %}Modifier l'École - SchoolFlow{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-white tracking-tight flex items-center space-x-3">
            <i data-lucide="edit" class="w-8 h-8 text-amber-500"></i>
            <span>Modifier l'École</span>
        </h1>
        <p class="mt-2 text-slate-400">Mettre à jour les informations pour <span class="text-white font-bold">{{ school.name }}</span>.</p>
    </div>

    <div class="bg-dark-gray border border-white/5 rounded-2xl overflow-hidden shadow-2xl">
        <form method="post" class="p-8 space-y-8">
            <div class="grid grid-cols-1 gap-8">
                {# Name #}
                <div class="group">
                    <label for="name">Nom de l'École *</label>
                    <input id="name" name="name" value="{{ school.name }}" required type="text" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                </div>

                {# Address #}
                <div class="group">
                    <label for="address">Adresse</label>
                    <input id="address" name="address" value="{{ school.address }}" type="text" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    {# Phone #}
                    <div class="group">
                        <label for="phone">Téléphone</label>
                        <input id="phone" name="phone" value="{{ school.phone }}" type="text" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                    </div>

                    {# Email #}
                    <div class="group">
                        <label for="email">Email</label>
                        <input id="email" name="email" value="{{ school.email }}" type="email" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                    </div>
                </div>

                {# Description #}
                <div class="group">
                    <label for="description">Description</label>
                    <textarea id="description" name="description" class="min-h-[120px] focus:ring-amber-500/50 focus:border-amber-500/50">{{ school.description }}</textarea>
                </div>
            </div>

            <div class="pt-8 border-t border-white/5 flex items-center justify-between">
                <a href="{{ path('school_show', {id: school.id}) }}" class="text-sm font-bold text-slate-500 hover:text-white transition-colors uppercase tracking-widest">
                    Annuler
                </a>
                <button type="submit" class="inline-flex items-center justify-center rounded-xl bg-amber-500 px-8 py-4 text-base font-bold text-white shadow-xl hover:brightness-110 active:scale-[0.98] transition-all">
                    Mettre à jour l'École
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
