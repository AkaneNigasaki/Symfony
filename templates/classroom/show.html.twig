{% extends 'base.html.twig' %}

{% block title %}{{ classroom.name }} - SchoolFlow{% endblock %}

{% block body %}
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8 pb-8 border-b border-white/5">
    <div>
        <h1 class="text-4xl font-bold text-white tracking-tight flex items-center space-x-4">
            <i data-lucide="door-open" class="w-10 h-10 text-primary"></i>
            <span>{{ classroom.name }}</span>
        </h1>
        <p class="mt-2 text-slate-400">Détails et équipements de cet espace d'apprentissage.</p>
    </div>
    <div class="mt-6 flex space-x-3 sm:mt-0">
        <a href="{{ path('classroom_edit', {id: classroom.id}) }}" class="inline-flex items-center px-4 py-2 bg-amber-500/10 text-amber-500 hover:bg-amber-500 hover:text-white rounded-xl text-sm font-bold transition-all">
            <i data-lucide="edit" class="w-5 h-5 mr-2"></i>
            Modifier
        </a>
        <button type="button" 
            onclick="showConfirmModal('Supprimer cette classe ?', () => { 
                document.getElementById('delete-form-classroom-{{ classroom.id }}').submit(); 
            })" 
            class="inline-flex items-center px-4 py-2 bg-red-500/10 text-red-500 hover:bg-red-500 hover:text-white rounded-xl text-sm font-bold transition-all">
            <i data-lucide="trash-2" class="w-5 h-5 mr-2"></i>
            Supprimer
        </button>
        <form id="delete-form-classroom-{{ classroom.id }}" method="post" action="{{ path('classroom_delete', {id: classroom.id}) }}" class="hidden">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ classroom.id) }}">
        </form>
        <a href="{{ path('classroom_index') }}" class="inline-flex items-center px-4 py-2 bg-slate-800 text-slate-400 hover:bg-slate-700 hover:text-white rounded-xl text-sm font-bold transition-all">
            <i data-lucide="arrow-left" class="w-5 h-5 mr-2"></i>
            Retour
        </a>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
    {# Details Card #}
    <div class="lg:col-span-2 bg-dark-gray border border-white/5 rounded-2xl overflow-hidden">
        <div class="px-6 py-4 border-b border-white/5 bg-white/2 flex items-center space-x-2">
            <i data-lucide="info" class="w-5 h-5 text-primary"></i>
            <h5 class="text-sm font-bold uppercase tracking-widest text-white">Informations Générales</h5>
        </div>
        <div class="p-8 space-y-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div>
                    <dt class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1">Type</dt>
                    <dd class="text-white">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-sky-500/10 text-sky-400 border border-sky-500/20">
                            {{ classroom.type }}
                        </span>
                    </dd>
                </div>
                <div>
                    <dt class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1">Capacité</dt>
                    <dd class="text-slate-200 text-lg">{{ classroom.capacity }} étudiants</dd>
                </div>
                {% if classroom.location %}
                <div>
                    <dt class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1">Emplacement</dt>
                    <dd class="text-slate-200 text-lg">{{ classroom.location }}</dd>
                </div>
                {% endif %}
                <div>
                    <dt class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1">École</dt>
                    <dd class="text-slate-200 text-lg">
                        {% if classroom.school %}
                            <a href="{{ path('school_show', {id: classroom.school.id}) }}" class="text-primary hover:underline">{{ classroom.school.name }}</a>
                        {% else %}
                            —
                        {% endif %}
                    </dd>
                </div>
            </div>

            <div class="pt-8 border-t border-white/5">
                <dt class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-4">Équipements</dt>
                <dd>
                    <div class="flex flex-wrap gap-2">
                        {% if classroom.facilities %}
                            {% for facility in classroom.facilities %}
                                <span class="inline-flex items-center px-3 py-1 rounded-lg text-xs font-bold bg-slate-800 text-slate-300 border border-white/5">
                                    {{ facility }}
                                </span>
                            {% endfor %}
                        {% else %}
                            <span class="text-slate-500 italic">Aucun équipement spécifié</span>
                        {% endif %}
                    </div>
                </dd>
            </div>
        </div>
    </div>

    {# Timeline/Meta Stats #}
    <div class="bg-dark-gray border border-white/5 rounded-2xl p-6 h-fit">
        <h5 class="text-sm font-bold uppercase tracking-widest text-white mb-6 flex items-center">
            <i data-lucide="history" class="w-5 h-5 text-slate-700 mr-2"></i>
            Métadonnées
        </h5>
        <div class="space-y-4">
            <div class="flex flex-col">
                <span class="text-[10px] font-bold text-slate-500 uppercase tracking-widest">Créé le</span>
                <span class="text-slate-300 text-sm">{{ classroom.createdAt|date('d/m/Y H:i') }}</span>
            </div>
            <div class="flex flex-col">
                <span class="text-[10px] font-bold text-slate-500 uppercase tracking-widest">Dernière mise à jour</span>
                <span class="text-slate-300 text-sm">{{ classroom.updatedAt|date('d/m/Y H:i') }}</span>
            </div>
        </div>
    </div>
</div>

{# Courses Card #}
<div class="bg-dark-gray border border-white/5 rounded-2xl overflow-hidden">
    <div class="px-6 py-4 border-b border-white/5 bg-white/2 flex items-center justify-between">
        <h5 class="text-sm font-bold uppercase tracking-widest text-white flex items-center">
            <i data-lucide="book-open" class="w-5 h-5 text-sky-400 mr-2"></i>
            Cours Assignés
        </h5>
    </div>
    <div class="p-0">
        {% if classroom.courses|length > 0 %}
            <ul class="divide-y divide-white/5">
                {% for course in classroom.courses %}
                    <li class="px-6 py-4 flex items-center justify-between group hover:bg-white/2 transition-colors">
                        <div class="flex items-center space-x-3">
                            <i data-lucide="book-marked" class="w-5 h-5 text-slate-700 group-hover:text-primary transition-colors"></i>
                            <div>
                                <div class="font-bold text-white group-hover:text-primary transition-colors">{{ course.name }}</div>
                                <div class="text-[10px] text-slate-500 font-bold uppercase">{{ course.code }}</div>
                            </div>
                        </div>
                        <span class="inline-flex items-center px-2 py-0.5 rounded-md text-[10px] font-bold bg-slate-800 text-slate-400 border border-white/5">
                            {{ course.semester }}
                        </span>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <div class="p-12 text-center">
                <i data-lucide="alert-circle" class="w-12 h-12 text-slate-800 mx-auto mb-2"></i>
                <p class="text-slate-500 text-sm">Aucun cours assigné à cette classe.</p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
