{% extends 'base.html.twig' %}

{% block title %}Modifier l'Étudiant - SchoolFlow{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-white tracking-tight flex items-center space-x-3">
            <i data-lucide="edit" class="w-8 h-8 text-amber-500"></i>
            <span>Modifier l'Étudiant</span>
        </h1>
        <p class="mt-2 text-slate-400">Modification du profil de <span class="text-white font-bold">{{ student.fullName }}</span>.</p>
    </div>

    <div class="bg-dark-gray border border-white/5 rounded-2xl overflow-hidden shadow-2xl">
        <form method="post" class="p-8 space-y-8">
            <div class="grid grid-cols-1 gap-8">
                {# School selection #}
                <div class="group">
                    <label for="school">École *</label>
                    <select id="school" name="school" required class="focus:ring-amber-500/50 focus:border-amber-500/50">
                        {% for school in schools %}
                            <option value="{{ school.id }}" {% if student.school and student.school.id == school.id %}selected{% endif %}>{{ school.name }}</option>
                        {% endfor %}
                    </select>
                </div>

                {# Student ID #}
                <div class="group">
                    <label for="studentId">ID Étudiant *</label>
                    <input id="studentId" name="studentId" value="{{ student.studentId }}" required type="text" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    {# First Name #}
                    <div class="group">
                        <label for="firstName">Prénom *</label>
                        <input id="firstName" name="firstName" value="{{ student.firstName }}" required type="text" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                    </div>

                    {# Last Name #}
                    <div class="group">
                        <label for="lastName">Nom *</label>
                        <input id="lastName" name="lastName" value="{{ student.lastName }}" required type="text" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                    </div>
                </div>

                {# Email #}
                <div class="group">
                    <label for="email">Email *</label>
                    <input id="email" name="email" value="{{ student.email }}" required type="email" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    {# Date of Birth #}
                    <div class="group">
                        <label for="dateOfBirth">Date de Naissance *</label>
                        <input id="dateOfBirth" name="dateOfBirth" value="{{ student.dateOfBirth|date('Y-m-d') }}" required type="date" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                    </div>

                    {# Enrollment Date #}
                    <div class="group">
                        <label for="enrollmentDate">Date d'Inscription *</label>
                        <input id="enrollmentDate" name="enrollmentDate" value="{{ student.enrollmentDate|date('Y-m-d') }}" required type="date" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                    </div>
                </div>
            </div>

            <div class="pt-8 border-t border-white/5 flex items-center justify-between">
                <a href="{{ path('student_show', {id: student.id}) }}" class="text-sm font-bold text-slate-500 hover:text-white transition-colors uppercase tracking-widest">
                    Annuler
                </a>
                <button type="submit" class="inline-flex items-center justify-center rounded-xl bg-amber-500 px-8 py-4 text-base font-bold text-white shadow-xl hover:brightness-110 active:scale-[0.98] transition-all">
                    Mettre à jour l'Étudiant
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
