{% extends 'base.html.twig' %}

{% block title %}Tableau de bord - EduManage{% endblock %}

{% block body %}
<div class="space-y-8 animate-in fade-in slide-in-from-bottom-4 duration-700">


    <section class="relative h-72 rounded-2xl overflow-hidden border border-primary/10 group shadow-2xl">
            <img
                class="w-full h-full object-cover opacity-40 group-hover:scale-105 transition-transform duration-1000"
                alt="Abstract dynamic purple background"
                src="https://picsum.photos/seed/nebula/1200/400"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-background-dark via-background-dark/40 to-transparent"></div>
            <div class="absolute bottom-0 left-0 p-10 space-y-2">
                <h2 class="text-4xl font-bold text-white tracking-tight">Bienvenue sur EduManage</h2>
                <p class="text-slate-300 max-w-xl text-lg leading-relaxed">
                    Gérez vos enseignants et matières en toute simplicité avec notre système
                    <span class="text-primary font-semibold">intuitif et moderne</span>.
                </p>
            </div>
        </section>


        <section class="grid grid-cols-1 md:grid-cols-4 gap-6">

            <div class="bg-surface-dark/60 border border-primary/10 p-6 rounded-xl shadow-lg hover:border-primary/30 transition-colors group">
                <div class="flex justify-between items-start mb-4">
                    <div class="p-3 bg-primary/10 rounded-lg text-primary group-hover:bg-primary/20 transition-colors">
                        <i data-lucide="contact" class="w-6 h-6"></i>
                    </div>
                    <span class="text-xs font-bold text-emerald-400 bg-emerald-400/10 px-2 py-1 rounded">
                        Actif
                    </span>
                </div>
                <h3 class="text-slate-400 text-sm font-medium">Total Enseignants</h3>
                <p class="text-3xl font-bold text-white mt-1">{{ stats.teachers|default(0) }}</p>
            </div>


            <div class="bg-surface-dark/60 border border-primary/10 p-6 rounded-xl shadow-lg hover:border-primary/30 transition-colors group">
                <div class="flex justify-between items-start mb-4">
                    <div class="p-3 bg-primary/10 rounded-lg text-primary group-hover:bg-primary/20 transition-colors">
                        <i data-lucide="book" class="w-6 h-6"></i>
                    </div>
                    <span class="text-xs font-bold text-slate-400 bg-white/5 px-2 py-1 rounded">
                        Total
                    </span>
                </div>
                <h3 class="text-slate-400 text-sm font-medium">Matières</h3>
                <p class="text-3xl font-bold text-white mt-1">{{ stats.subjects|default(0) }}</p>
            </div>


            <div class="bg-surface-dark/60 border border-primary/10 p-6 rounded-xl shadow-lg hover:border-primary/30 transition-colors group">
                <div class="flex justify-between items-start mb-4">
                    <div class="p-3 bg-primary/10 rounded-lg text-primary group-hover:bg-primary/20 transition-colors">
                        <i data-lucide="check-circle" class="w-6 h-6"></i>
                    </div>
                    <span class="text-xs font-bold text-emerald-400 bg-emerald-400/10 px-2 py-1 rounded">
                        Assignées
                    </span>
                </div>
                <h3 class="text-slate-400 text-sm font-medium">Matières Assignées</h3>
                <p class="text-3xl font-bold text-white mt-1">{{ stats.assigned_subjects|default(0) }}</p>
            </div>


            <div class="bg-surface-dark/60 border border-primary/10 p-6 rounded-xl shadow-lg hover:border-primary/30 transition-colors group">
                <div class="flex justify-between items-start mb-4">
                    <div class="p-3 bg-primary/10 rounded-lg text-primary group-hover:bg-primary/20 transition-colors">
                        <i data-lucide="alert-circle" class="w-6 h-6"></i>
                    </div>
                    <span class="text-xs font-bold text-amber-400 bg-amber-400/10 px-2 py-1 rounded">
                        À assigner
                    </span>
                </div>
                <h3 class="text-slate-400 text-sm font-medium">Sans Enseignant</h3>
                <p class="text-3xl font-bold text-white mt-1">{{ stats.unassigned_subjects|default(0) }}</p>
            </div>
        </section>


        <section class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <a href="{{ path('teacher_new') }}" class="bg-surface-dark/40 border border-primary/10 p-6 rounded-2xl hover:border-primary/30 transition-all group">
                <div class="flex items-center gap-4">
                    <div class="p-4 bg-primary/10 rounded-xl text-primary group-hover:bg-primary/20 transition-colors">
                        <i data-lucide="user-plus" class="w-8 h-8"></i>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-white">Ajouter un Enseignant</h3>
                        <p class="text-slate-400 text-sm mt-1">Enregistrer un nouvel enseignant dans le système</p>
                    </div>
                </div>
            </a>

            <a href="{{ path('subject_new') }}" class="bg-surface-dark/40 border border-primary/10 p-6 rounded-2xl hover:border-primary/30 transition-all group">
                <div class="flex items-center gap-4">
                    <div class="p-4 bg-primary/10 rounded-xl text-primary group-hover:bg-primary/20 transition-colors">
                        <i data-lucide="book-plus" class="w-8 h-8"></i>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-white">Ajouter une Matière</h3>
                        <p class="text-slate-400 text-sm mt-1">Créer une nouvelle matière au programme</p>
                    </div>
                </div>
            </a>
        </section>
    </div>
</div>
{% endblock %}
