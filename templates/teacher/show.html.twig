{% extends 'base.html.twig' %}

{% block title %}{{ teacher.fullName }} - EduManage{% endblock %}

{% block body %}
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8 pb-8 border-b border-white/5">
    <div>
        <h1 class="text-4xl font-bold text-white tracking-tight flex items-center space-x-4">
            <i data-lucide="id-card" class="w-10 h-10 text-primary"></i>
            <span>{{ teacher.fullName }}</span>
        </h1>
        <p class="mt-2 text-slate-400">Spécialisation : <span class="text-white font-medium uppercase tracking-widest text-xs">{{ teacher.specialization ?? 'Général' }}</span></p>
    </div>
    <div class="mt-6 flex space-x-3 sm:mt-0">
        <a href="{{ path('teacher_edit', {id: teacher.id}) }}" class="inline-flex items-center px-4 py-2 bg-amber-500/10 text-amber-500 hover:bg-amber-500 hover:text-white rounded-xl text-sm font-bold transition-all">
            <i data-lucide="edit" class="w-5 h-5 mr-2"></i>
            Modifier le Profil
        </a>
        <a href="{{ path('teacher_index') }}" class="inline-flex items-center px-4 py-2 bg-white/5 text-slate-400 hover:bg-white/10 hover:text-white rounded-xl text-sm font-bold transition-all">
            <i data-lucide="arrow-left" class="w-5 h-5 mr-2"></i>
            Retour à la liste
        </a>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
    <div class="lg:col-span-2 space-y-8">
        <div class="bg-dark-gray border border-white/5 rounded-2xl overflow-hidden shadow-xl">
            <div class="px-6 py-4 border-b border-white/5 bg-white/2 flex items-center space-x-2">
                <i data-lucide="clipboard-list" class="w-5 h-5 text-primary"></i>
                <h5 class="text-sm font-bold uppercase tracking-widest text-white">Détails de l'Emploi</h5>
            </div>
            <div class="p-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-y-8 gap-x-12">
                    <div>
                        <dt class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1">Adresse Email</dt>
                        <dd class="text-slate-200 text-lg underline decoration-primary/30"><a href="mailto:{{ teacher.email }}">{{ teacher.email }}</a></dd>
                    </div>
                    <div>
                        <dt class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1">Numéro de Téléphone</dt>
                        <dd class="text-slate-200 text-lg">{{ teacher.phoneNumber ?? 'Non renseigné' }}</dd>
                    </div>
                    <div>
                        <dt class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1">Date d'Embauche</dt>
                        <dd class="text-slate-200 text-lg">{{ teacher.hireDate|date('d/m/Y') }}</dd>
                    </div>
                    <div>
                        <dt class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1">Compte Créé le</dt>
                        <dd class="text-slate-200 text-lg">{{ teacher.createdAt|date('d/m/Y') }}</dd>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-dark-gray border border-white/5 rounded-2xl overflow-hidden shadow-xl">
            <div class="px-6 py-4 border-b border-white/5 bg-white/2 flex items-center justify-between">
                <h5 class="text-sm font-bold uppercase tracking-widest text-white flex items-center">
                    <i data-lucide="book-open" class="w-5 h-5 text-sky-400 mr-2"></i>
                    Matières Assignées
                </h5>
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[10px] font-bold bg-sky-500/10 text-sky-400 border border-sky-500/20">
                    {{ teacher.subjects|length }} Actif(s)
                </span>
            </div>
            <div class="p-0">
                {% if teacher.subjects|length > 0 %}
                    <ul class="divide-y divide-white/5">
                        {% for subject in teacher.subjects %}
                            <li class="px-6 py-5 flex items-center justify-between group hover:bg-white/2 transition-all">
                                <div>
                                    <div class="flex items-center space-x-2 mb-1">
                                        <span class="text-xs font-mono text-slate-500">{{ subject.code }}</span>
                                        <span class="font-bold text-white group-hover:text-primary transition-colors text-base">{{ subject.name }}</span>
                                    </div>
                                    <div class="flex items-center text-xs text-slate-500 space-x-4">
                                        <span class="flex items-center text-slate-500">
                                            <i data-lucide="trending-up" class="w-3.5 h-3.5 mr-1"></i>
                                            Coef. {{ subject.coefficient }}
                                        </span>
                                        <span class="flex items-center text-slate-500">
                                            <i data-lucide="clock" class="w-3.5 h-3.5 mr-1"></i>
                                            {{ subject.hoursPerWeek }}h/semaine
                                        </span>
                                    </div>
                                </div>
                                <div class="flex items-center">
                                    <a href="{{ path('subject_show', {id: subject.id}) }}" class="inline-flex items-center px-2.5 py-0.5 rounded-full text-[10px] font-bold tracking-wider uppercase bg-primary/10 text-primary border border-primary/20 hover:bg-primary hover:text-white transition-colors">
                                        Voir
                                    </a>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <div class="p-12 text-center">
                        <i data-lucide="book-marked" class="w-12 h-12 text-slate-700 mx-auto mb-2"></i>
                        <p class="text-slate-500 italic">Aucune matière assignée à cet enseignant.</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="bg-dark-gray border border-white/5 rounded-2xl p-6 shadow-xl h-fit">
        <div class="flex items-center justify-between mb-6">
            <h5 class="text-sm font-bold uppercase tracking-widest text-white">Actions Rapides</h5>
            <i data-lucide="zap" class="w-5 h-5 text-slate-700"></i>
        </div>
        <div class="space-y-4">
            <a href="{{ path('subject_new') }}" class="flex items-center w-full px-4 py-3 bg-primary text-white text-xs font-bold uppercase tracking-widest rounded-xl hover:brightness-110 transition-all">
                <i data-lucide="plus" class="w-4 h-4 mr-2"></i>
                Créer une Nouvelle Matière
            </a>
            <div class="p-4 rounded-xl bg-white/2 border border-white/5 text-center">
                <div class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1">Charge d'Enseignement</div>
                <div class="text-2xl font-bold text-white">{{ teacher.subjects|length }} Matières</div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
