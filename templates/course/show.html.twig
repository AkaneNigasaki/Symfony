{% extends 'base.html.twig' %}

{% block title %}{{ course.code }} - {{ course.name }} - SchoolFlow{% endblock %}

{% block body %}
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8 pb-8 border-b border-white/5">
    <div>
        <h1 class="text-4xl font-bold text-white tracking-tight flex items-center space-x-4">
            <i data-lucide="book" class="w-10 h-10 text-primary"></i>
            <span>{{ course.code }} : {{ course.name }}</span>
        </h1>
        <p class="mt-2 text-slate-400">Détails et inscriptions pour ce cours académique.</p>
    </div>
    <div class="mt-6 flex space-x-3 sm:mt-0">
        <a href="{{ path('course_edit', {id: course.id}) }}" class="inline-flex items-center px-4 py-2 bg-amber-500/10 text-amber-500 hover:bg-amber-500 hover:text-white rounded-xl text-sm font-bold transition-all">
            <i data-lucide="edit" class="w-5 h-5 mr-2"></i>
            Modifier
        </a>
        <button type="button" 
            onclick="showConfirmModal('Supprimer ce cours ?', () => { 
                document.getElementById('delete-form-course-{{ course.id }}').submit(); 
            })" 
            class="inline-flex items-center px-4 py-2 bg-red-500/10 text-red-500 hover:bg-red-500 hover:text-white rounded-xl text-sm font-bold transition-all">
            <i data-lucide="trash-2" class="w-5 h-5 mr-2"></i>
            Supprimer
        </button>
        <form id="delete-form-course-{{ course.id }}" method="post" action="{{ path('course_delete', {id: course.id}) }}" class="hidden">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ course.id) }}">
        </form>
        <a href="{{ path('course_index') }}" class="inline-flex items-center px-4 py-2 bg-slate-800 text-slate-400 hover:bg-slate-700 hover:text-white rounded-xl text-sm font-bold transition-all">
            <i data-lucide="arrow-left" class="w-5 h-5 mr-2"></i>
            Retour
        </a>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
    {# Main Info #}
    <div class="lg:col-span-2 space-y-8">
        <div class="bg-dark-gray border border-white/5 rounded-2xl overflow-hidden shadow-xl">
            <div class="px-6 py-4 border-b border-white/5 bg-white/2 flex items-center space-x-2">
                <i data-lucide="info" class="w-5 h-5 text-primary"></i>
                <h5 class="text-sm font-bold uppercase tracking-widest text-white">Informations sur le Cours</h5>
            </div>
            <div class="p-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div>
                        <dt class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1">Code du Cours</dt>
                        <dd class="text-white font-mono text-xl">{{ course.code }}</dd>
                    </div>
                    <div>
                        <dt class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1">Nom du Cours</dt>
                        <dd class="text-white text-lg">{{ course.name }}</dd>
                    </div>
                    <div>
                        <dt class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1">Crédits</dt>
                        <dd class="text-slate-200 text-lg">{{ course.credits }} unités</dd>
                    </div>
                    <div>
                        <dt class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1">Semestre</dt>
                        <dd>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-slate-800 text-slate-300 border border-white/5">
                                {{ course.semester }}
                            </span>
                        </dd>
                    </div>
                </div>

                <div class="mt-8 pt-8 border-t border-white/5">
                    <dt class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-2">Description</dt>
                    <dd class="text-slate-300 leading-relaxed">
                        {{ course.description ?: 'Aucune description fournie.' }}
                    </dd>
                </div>
            </div>
        </div>

        {# Students List #}
        <div class="bg-dark-gray border border-white/5 rounded-2xl overflow-hidden shadow-xl">
            <div class="px-6 py-4 border-b border-white/5 bg-white/2 flex items-center justify-between">
                <h5 class="text-sm font-bold uppercase tracking-widest text-white flex items-center">
                    <i data-lucide="users" class="w-5 h-5 text-sky-400 mr-2"></i>
                    Étudiants Inscrits
                </h5>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-sky-500/10 text-sky-400 border border-sky-500/20">
                    {{ course.enrolledStudentsCount }} inscrits
                </span>
            </div>
            <div class="p-0">
                {% if course.enrollments|length > 0 %}
                    <ul class="divide-y divide-white/5">
                        {% for enrollment in course.enrollments %}
                            {% if enrollment.status == 'enrolled' %}
                                <li class="px-6 py-4 flex items-center justify-between group hover:bg-white/2 transition-colors">
                                    <div class="flex items-center space-x-3">
                                        <i data-lucide="user" class="w-4 h-4 text-slate-700 group-hover:text-primary transition-colors"></i>
                                        <span class="font-bold text-white transition-colors text-base">{{ enrollment.student.fullName }}</span>
                                    </div>
                                    <span class="inline-flex items-center px-2 py-0.5 rounded-md text-[10px] font-bold bg-green-500/10 text-green-400 border border-green-500/20 uppercase tracking-widest">
                                        {{ enrollment.status }}
                                    </span>
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                {% else %}
                    <div class="p-12 text-center">
                        <i data-lucide="user-x" class="w-12 h-12 text-slate-800 mx-auto mb-2"></i>
                        <p class="text-slate-500 text-sm">Aucun étudiant inscrit pour le moment.</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    {# Sidebar Card #}
    <div class="space-y-6">
        <div class="bg-dark-gray border border-white/5 rounded-2xl p-6 shadow-xl">
            <h5 class="text-sm font-bold uppercase tracking-widest text-white mb-6">Affectation & Capacité</h5>
            <div class="space-y-6">
                <div>
                    <span class="text-[10px] font-bold text-slate-500 uppercase tracking-widest block mb-2">Enseignant</span>
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 rounded-full bg-primary/20 flex items-center justify-center text-primary">
                            <i data-lucide="user-circle" class="w-5 h-5"></i>
                        </div>
                        <div class="text-slate-200 font-bold">{{ course.teacher ? course.teacher.fullName : 'Non assigné' }}</div>
                    </div>
                </div>
                <div>
                    <span class="text-[10px] font-bold text-slate-500 uppercase tracking-widest block mb-2">Salle de Classe</span>
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 rounded-full bg-sky-500/20 flex items-center justify-center text-sky-400">
                            <i data-lucide="door-open" class="w-5 h-5"></i>
                        </div>
                        <div class="text-slate-200 font-bold">{{ course.classroom ? course.classroom.name : 'Non assignée' }}</div>
                    </div>
                </div>
                <div class="pt-6 border-t border-white/5">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-[10px] font-bold text-slate-500 uppercase tracking-widest">Taux de Remplissage</span>
                        <span class="text-xs font-bold text-white">{{ course.enrolledStudentsCount }}/{{ course.maxStudents }}</span>
                    </div>
                    <div class="w-full bg-white/5 rounded-full h-2 overflow-hidden mb-2">
                        <div class="bg-primary h-full" style="width: {{ (course.enrolledStudentsCount / course.maxStudents * 100)|round }}%"></div>
                    </div>
                    {% if course.hasAvailableSeats %}
                        <span class="text-[10px] text-green-400 font-bold uppercase tracking-widest flex items-center">
                            <span class="w-1.5 h-1.5 rounded-full bg-green-400 mr-2"></span>
                            Places disponibles
                        </span>
                    {% else %}
                        <span class="text-[10px] text-red-400 font-bold uppercase tracking-widest flex items-center">
                            <span class="w-1.5 h-1.5 rounded-full bg-red-400 mr-2"></span>
                            Complet
                        </span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
