{% extends 'base.html.twig' %}

{% block title %}Nouveau Planning - SchoolFlow{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-white tracking-tight flex items-center space-x-3">
            <i data-lucide="calendar-plus" class="w-8 h-8 text-primary"></i>
            <span>Créer un Nouvel Emploi du Temps</span>
        </h1>
        <p class="mt-2 text-slate-400">Planifiez un nouveau créneau pour un cours académique.</p>
    </div>

    <div class="bg-dark-gray border border-white/5 rounded-2xl overflow-hidden shadow-2xl">
        <form method="post" class="p-8 space-y-8">
            <div class="grid grid-cols-1 gap-8">
                {# Course Selection #}
                <div class="group">
                    <label for="course">Cours *</label>
                    <select id="course" name="course" required>
                        <option value="">Sélectionner un cours...</option>
                        {% for course in courses %}
                            <option value="{{ course.id }}">{{ course.code }} - {{ course.name }}</option>
                        {% endfor %}
                    </select>
                </div>

                {# Classroom Selection #}
                <div class="group">
                    <label for="classroom">Salle de Classe *</label>
                    <select id="classroom" name="classroom" required>
                        <option value="">Sélectionner une salle...</option>
                        {% for classroom in classrooms %}
                            <option value="{{ classroom.id }}">{{ classroom.name }} ({{ classroom.capacity }} places)</option>
                        {% endfor %}
                    </select>
                </div>

                {# Day Selection #}
                <div class="group">
                    <label for="dayOfWeek">Jour de la Semaine *</label>
                    <select id="dayOfWeek" name="dayOfWeek" required>
                        <option value="">Sélectionner un jour...</option>
                        <option value="1">Lundi</option>
                        <option value="2">Mardi</option>
                        <option value="3">Mercredi</option>
                        <option value="4">Jeudi</option>
                        <option value="5">Vendredi</option>
                        <option value="6">Samedi</option>
                        <option value="7">Dimanche</option>
                    </select>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    {# Start Time #}
                    <div class="group">
                        <label for="startTime">Heure de Début *</label>
                        <input id="startTime" name="startTime" required type="time"/>
                    </div>

                    {# End Time #}
                    <div class="group">
                        <label for="endTime">Heure de Fin *</label>
                        <input id="endTime" name="endTime" required type="time"/>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    {# Effective From #}
                    <div class="group">
                        <label for="effectiveFrom">Valide à partir du *</label>
                        <input id="effectiveFrom" name="effectiveFrom" required type="date" value="{{ 'now'|date('Y-m-d') }}"/>
                    </div>

                    {# Effective To #}
                    <div class="group">
                        <label for="effectiveTo">Valide jusqu'au</label>
                        <input id="effectiveTo" name="effectiveTo" type="date"/>
                    </div>
                </div>
            </div>

            <div class="pt-8 border-t border-white/5 flex items-center justify-between">
                <a href="{{ path('schedule_index') }}" class="text-sm font-bold text-slate-500 hover:text-white transition-colors uppercase tracking-widest">
                    Annuler
                </a>
                <button type="submit" class="inline-flex items-center justify-center rounded-xl bg-primary px-8 py-4 text-base font-bold text-white shadow-xl hover:brightness-110 active:scale-[0.98] transition-all">
                    Créer l'Emploi du Temps
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
