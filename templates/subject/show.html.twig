{% extends 'base.html.twig' %}

{% block title %}{{ subject.name }} - EduManage{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto">
    <div class="mb-8 flex justify-between items-start">
        <div>
            <h1 class="text-3xl font-bold text-white tracking-tight flex items-center space-x-3">
                <i data-lucide="book-open" class="w-8 h-8 text-primary"></i>
                <span>{{ subject.name }}</span>
            </h1>
            <p class="mt-2 text-slate-400">Code: {{ subject.code }}</p>
        </div>
        <div class="flex space-x-2">
            <a href="{{ path('subject_edit', {id: subject.id}) }}" class="inline-flex items-center justify-center rounded-xl bg-amber-500/10 text-amber-500 hover:bg-amber-500 hover:text-white px-4 py-3 text-sm font-bold transition-all">
                <i data-lucide="edit" class="w-5 h-5 mr-2"></i>
                Modifier
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2 space-y-8">
            <div class="bg-dark-gray rounded-2xl p-8">
                <h2 class="text-xl font-bold text-white mb-6 flex items-center">
                    <i data-lucide="info" class="w-5 h-5 mr-2 text-primary"></i>
                    Informations Générales
                </h2>
                <div class="space-y-6">
                    <div>
                        <label class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-2">Description</label>
                        <p class="text-slate-300">{{ subject.description ?? 'Aucune description fournie.' }}</p>
                    </div>
                    <div class="grid grid-cols-2 gap-6">
                        <div>
                            <label class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-2">Coefficient</label>
                            <p class="text-2xl font-bold text-white">{{ subject.coefficient }}</p>
                        </div>
                        <div>
                            <label class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-2">Heures/Semaine</label>
                            <p class="text-2xl font-bold text-white">{{ subject.hoursPerWeek }}h</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="space-y-8">
            <div class="bg-dark-gray rounded-2xl p-8">
                <h2 class="text-xl font-bold text-white mb-6 flex items-center">
                    <i data-lucide="user" class="w-5 h-5 mr-2 text-primary"></i>
                    Enseignant
                </h2>
                {% if subject.teacher %}
                    <div class="space-y-3">
                        <div>
                            <label class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-1">Nom</label>
                            <a href="{{ path('teacher_show', {id: subject.teacher.id}) }}" class="text-lg font-bold text-white hover:text-primary transition-colors">
                                {{ subject.teacher.fullName }}
                            </a>
                        </div>
                        <div>
                            <label class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-1">Email</label>
                            <p class="text-slate-300">{{ subject.teacher.email }}</p>
                        </div>
                        {% if subject.teacher.specialization %}
                        <div>
                            <label class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-1">Spécialisation</label>
                            <p class="text-slate-300">{{ subject.teacher.specialization }}</p>
                        </div>
                        {% endif %}
                    </div>
                {% else %}
                    <p class="text-slate-500">Aucun enseignant assigné pour cette matière.</p>
                {% endif %}
            </div>

            <div class="bg-dark-gray rounded-2xl p-8">
                <h2 class="text-xl font-bold text-white mb-4 flex items-center">
                    <i data-lucide="trash-2" class="w-5 h-5 mr-2 text-red-500"></i>
                    Zone Dangereuse
                </h2>
                <button type="button"
                    onclick="showConfirmModal('Êtes-vous sûr de vouloir supprimer {{ subject.name }} ? Cette action est irréversible.', () => {
                        document.getElementById('delete-form').submit();
                    })"
                    class="w-full inline-flex items-center justify-center rounded-xl bg-red-500/10 text-red-500 hover:bg-red-500 hover:text-white px-4 py-3 text-sm font-bold transition-all">
                    <i data-lucide="trash-2" class="w-5 h-5 mr-2"></i>
                    Supprimer la Matière
                </button>
                <form id="delete-form" method="post" action="{{ path('subject_delete', {id: subject.id}) }}" class="hidden">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ subject.id) }}">
                </form>
            </div>
        </div>
    </div>

    <div class="mt-8">
        <a href="{{ path('subject_index') }}" class="inline-flex items-center text-slate-400 hover:text-white transition-colors">
            <i data-lucide="arrow-left" class="w-4 h-4 mr-2"></i>
            Retour à la liste des matières
        </a>
    </div>
</div>
{% endblock %}
