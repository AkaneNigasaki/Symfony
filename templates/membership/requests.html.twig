{% extends 'base.html.twig' %}

{% block title %}Demandes d'adhésion - {{ school.name }}{% endblock %}

{% block body %}
<div class="mb-8 flex items-center justify-between">
    <div>
        <nav class="flex mb-4 text-xs font-bold uppercase tracking-widest text-slate-500 space-x-2">
            <a href="{{ path('school_index') }}" class="hover:text-primary transition-colors">Écoles</a>
            <span>/</span>
            <a href="{{ path('school_show', {id: school.id}) }}" class="hover:text-primary transition-colors">{{ school.name }}</a>
            <span>/</span>
            <span class="text-white">Demandes</span>
        </nav>
        <h1 class="text-4xl font-bold text-white tracking-tight flex items-center space-x-4">
            <i data-lucide="user-plus" class="w-10 h-10 text-primary"></i>
            <span>Demandes d'adhésion</span>
        </h1>
        <p class="mt-2 text-slate-400">Gérez les personnes souhaitant rejoindre votre établissement.</p>
    </div>
</div>

<div class="bg-dark-gray border border-white/5 rounded-2xl overflow-hidden shadow-2xl">
    <div class="px-8 py-6 border-b border-white/5 bg-white/2">
        <h5 class="text-sm font-bold uppercase tracking-widest text-white">Demandes en attente ({{ requests|length }})</h5>
    </div>
    
    {% if requests|length > 0 %}
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="border-b border-white/5 bg-white/1">
                        <th class="px-8 py-4 text-[10px] font-bold text-slate-500 uppercase tracking-widest">Utilisateur</th>
                        <th class="px-8 py-4 text-[10px] font-bold text-slate-500 uppercase tracking-widest">Email</th>
                        <th class="px-8 py-4 text-[10px] font-bold text-slate-500 uppercase tracking-widest">Date de demande</th>
                        <th class="px-8 py-4 text-[10px] font-bold text-slate-500 uppercase tracking-widest text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/5">
                    {% for request in requests %}
                        <tr class="hover:bg-white/2 transition-colors group">
                            <td class="px-8 py-6">
                                <div class="flex items-center space-x-3">
                                    <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary font-bold">
                                        {{ request.user.firstName|first|upper }}{{ request.user.name|first|upper }}
                                    </div>
                                    <div>
                                        <div class="text-white font-bold">{{ request.fullName }}</div>
                                        <div class="text-[10px] text-slate-500 uppercase tracking-tight">Candidat Étudiant</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-8 py-6 text-slate-400 text-sm italic">{{ request.email }}</td>
                            <td class="px-8 py-6 text-slate-500 text-sm">{{ request.createdAt|date('d/m/Y H:i') }}</td>
                            <td class="px-8 py-6 text-right">
                                <div class="flex items-center justify-end space-x-2">
                                    <form method="post" action="{{ path('membership_approve', {id: request.id}) }}">
                                        <button type="submit" class="inline-flex items-center px-4 py-2 bg-green-500/10 text-green-500 hover:bg-green-500 hover:text-white rounded-xl text-xs font-bold transition-all">
                                            <i data-lucide="check" class="w-4 h-4 mr-2"></i>
                                            Accepter
                                        </button>
                                    </form>
                                    <form method="post" action="{{ path('membership_reject', {id: request.id}) }}">
                                        <button type="submit" class="inline-flex items-center px-4 py-2 bg-red-500/10 text-red-500 hover:bg-red-500 hover:text-white rounded-xl text-xs font-bold transition-all">
                                            <i data-lucide="x" class="w-4 h-4 mr-2"></i>
                                            Refuser
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="p-20 text-center">
            <div class="w-20 h-20 bg-white/2 rounded-full flex items-center justify-center mx-auto mb-6">
                <i data-lucide="inbox" class="w-10 h-10 text-slate-700"></i>
            </div>
            <h3 class="text-white font-bold text-lg">Aucune demande en attente</h3>
            <p class="text-slate-500 mt-2">Toutes les demandes ont été traitées.</p>
        </div>
    {% endif %}
</div>
{% endblock %}
