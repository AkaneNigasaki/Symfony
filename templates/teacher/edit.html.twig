{% extends 'base.html.twig' %}

{% block title %}Modifier l'Enseignant - EduManage{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-white tracking-tight flex items-center space-x-3">
            <i data-lucide="edit" class="w-8 h-8 text-amber-500"></i>
            <span>Modifier l'Enseignant</span>
        </h1>
        <p class="mt-2 text-slate-400">Modification du profil de <span class="text-white font-bold">{{ teacher.fullName }}</span>.</p>
    </div>

    <div class="bg-dark-gray rounded-2xl overflow-hidden shadow-2xl">
        <form method="post" class="p-8 space-y-8">
            <div class="grid grid-cols-1 gap-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="group">
                        <label for="firstName">Prénom *</label>
                        <input id="firstName" name="firstName" value="{{ teacher.firstName }}" required type="text" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                    </div>

                    <div class="group">
                        <label for="lastName">Nom *</label>
                        <input id="lastName" name="lastName" value="{{ teacher.lastName }}" required type="text" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                    </div>
                </div>

                <div class="group">
                    <label for="email">Adresse Email *</label>
                    <input id="email" name="email" value="{{ teacher.email }}" required type="email" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="group">
                        <label for="phoneNumber">Numéro de Téléphone</label>
                        <input id="phoneNumber" name="phoneNumber" value="{{ teacher.phoneNumber }}" type="tel" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                    </div>

                    <div class="group">
                        <label for="specialization">Spécialisation</label>
                        <input id="specialization" name="specialization" value="{{ teacher.specialization }}" type="text" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                    </div>
                </div>

                <div class="group">
                    <label for="hireDate">Date d'Embauche *</label>
                    <input id="hireDate" name="hireDate" value="{{ teacher.hireDate|date('Y-m-d') }}" required type="date" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                </div>
            </div>

            <div class="pt-8 flex items-center justify-between">
                <a href="{{ path('teacher_show', {id: teacher.id}) }}" class="text-sm font-bold text-slate-500 hover:text-white transition-colors uppercase tracking-widest">
                    Annuler
                </a>
                <button type="submit" class="inline-flex items-center justify-center rounded-xl bg-amber-500 px-8 py-4 text-base font-bold text-white shadow-xl hover:brightness-110 active:scale-[0.98] transition-all">
                    Mettre à jour l'Enseignant
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
