{% extends 'base.html.twig' %}

{% block title %}{{ student.fullName }} - SchoolFlow{% endblock %}

{% block body %}
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8 pb-8 border-b border-white/5">
    <div>
        <h1 class="text-4xl font-bold text-white tracking-tight flex items-center space-x-4">
            <i data-lucide="user" class="w-10 h-10 text-primary"></i>
            <span>{{ student.fullName }}</span>
        </h1>
        <p class="mt-2 text-slate-400">ID Étudiant : <span class="text-white font-mono">{{ student.studentId }}</span></p>
    </div>
    <div class="mt-6 flex space-x-3 sm:mt-0">
        <a href="{{ path('student_edit', {id: student.id}) }}" class="inline-flex items-center px-4 py-2 bg-amber-500/10 text-amber-500 hover:bg-amber-500 hover:text-white rounded-xl text-sm font-bold transition-all">
            <i data-lucide="edit" class="w-5 h-5 mr-2"></i>
            Modifier le Profil
        </a>
        <a href="{{ path('student_index') }}" class="inline-flex items-center px-4 py-2 bg-white/5 text-slate-400 hover:bg-white/10 hover:text-white rounded-xl text-sm font-bold transition-all">
            <i data-lucide="arrow-left" class="w-5 h-5 mr-2"></i>
            Retour à la liste
        </a>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
    {# Details Card #}
    <div class="lg:col-span-2 space-y-8">
        <div class="bg-dark-gray border border-white/5 rounded-2xl overflow-hidden shadow-xl">
            <div class="px-6 py-4 border-b border-white/5 bg-white/2 flex items-center space-x-2">
                <i data-lucide="contact" class="w-5 h-5 text-primary"></i>
                <h5 class="text-sm font-bold uppercase tracking-widest text-white">Contact & Infos Personnelles</h5>
            </div>
            <div class="p-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-y-8 gap-x-12">
                    <div>
                        <dt class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1">Adresse Email</dt>
                        <dd class="text-slate-200 text-lg underline decoration-primary/30"><a href="mailto:{{ student.email }}">{{ student.email }}</a></dd>
                    </div>
                    <div>
                        <dt class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1">Date de Naissance</dt>
                        <dd class="text-slate-200 text-lg">{{ student.dateOfBirth|date('d/m/Y') }}</dd>
                    </div>
                    <div>
                        <dt class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1">Date d'Inscription</dt>
                        <dd class="text-slate-200 text-lg">{{ student.enrollmentDate|date('d/m/Y') }}</dd>
                    </div>
                </div>
            </div>
        </div>

        {# Enrolled Courses #}
        <div class="bg-dark-gray border border-white/5 rounded-2xl overflow-hidden shadow-xl">
            <div class="px-6 py-4 border-b border-white/5 bg-white/2 flex items-center justify-between">
                <h5 class="text-sm font-bold uppercase tracking-widest text-white flex items-center">
                    <i data-lucide="book-open" class="w-5 h-5 text-sky-400 mr-2"></i>
                    Cours Inscrits
                </h5>
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[10px] font-bold bg-sky-500/10 text-sky-400 border border-sky-500/20">
                    {{ student.activeEnrollments|length }} Actif(s)
                </span>
            </div>
            <div class="p-0">
                {% if student.enrollments|length > 0 %}
                    <ul class="divide-y divide-white/5">
                        {% for enrollment in student.enrollments %}
                            <li class="px-6 py-5 flex items-center justify-between group hover:bg-white/2 transition-all">
                                <div>
                                    <div class="flex items-center space-x-2 mb-1">
                                        <span class="text-xs font-mono text-slate-500">{{ enrollment.course.code }}</span>
                                        <span class="font-bold text-white group-hover:text-primary transition-colors text-base">{{ enrollment.course.name }}</span>
                                    </div>
                                    <div class="flex items-center text-xs text-slate-500">
                                        <i data-lucide="user" class="w-3.5 h-3.5 mr-1 text-slate-600"></i>
                                        <span>Prof : {{ enrollment.course.teacher.fullName }}</span>
                                    </div>
                                </div>
                                <div class="flex items-center space-x-3">
                                    <span class="inline-flex items-center px-2 py-0.5 rounded-md text-[10px] font-bold bg-slate-800 text-slate-400 border border-white/5">
                                        {{ enrollment.course.semester }}
                                    </span>
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-[10px] font-bold tracking-wider uppercase {{ enrollment.status == 'enrolled' ? 'bg-green-500/10 text-green-400 border border-green-500/20' : 'bg-slate-700 text-slate-400' }}">
                                        {{ enrollment.status }}
                                    </span>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <div class="p-12 text-center">
                        <i data-lucide="scroll" class="w-12 h-12 text-slate-700 mx-auto mb-2"></i>
                        <p class="text-slate-500 italic">Aucune inscription aux cours trouvée.</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    {# Sidebar Info #}
    <div class="space-y-6">
        <div class="bg-dark-gray border border-white/5 rounded-2xl p-6 shadow-xl">
            <h5 class="text-sm font-bold uppercase tracking-widest text-white mb-6">Infos Système</h5>
            <div class="space-y-4">
                <div class="flex items-center justify-between text-sm py-2 border-b border-white/5">
                    <span class="text-slate-500">Créé le</span>
                    <span class="text-slate-300">{{ student.createdAt|date('d/m/Y H:i') }}</span>
                </div>
                <div class="flex items-center justify-between text-sm py-2">
                    <span class="text-slate-500">Statut du compte</span>
                    <span class="flex items-center text-green-400">
                        <span class="w-2 h-2 rounded-full bg-green-400 mr-2 shadow-[0_0_8px_rgba(74,222,128,0.5)]"></span>
                        Actif
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
