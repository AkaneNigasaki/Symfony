{% extends 'base.html.twig' %}

{% block title %}Nouvel Enseignant - SchoolFlow{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-white tracking-tight flex items-center space-x-3">
            <i data-lucide="user-plus" class="w-8 h-8 text-primary"></i>
            <span>Créer un Nouvel Enseignant</span>
        </h1>
        <p class="mt-2 text-slate-400">Ajoutez un nouveau membre au corps professoral de votre institution.</p>
    </div>

    <div class="bg-dark-gray border border-white/5 rounded-2xl overflow-hidden shadow-2xl">
        <form method="post" class="p-8 space-y-8">
            <div class="grid grid-cols-1 gap-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    {# First Name #}
                    <div class="group">
                        <label for="firstName">Prénom *</label>
                        <input id="firstName" name="firstName" placeholder="Ex. Sarah" required type="text"/>
                    </div>

                    {# Last Name #}
                    <div class="group">
                        <label for="lastName">Nom *</label>
                        <input id="lastName" name="lastName" placeholder="Ex. Connor" required type="text"/>
                    </div>
                </div>

                {# Email #}
                <div class="group">
                    <label for="email">Adresse Email *</label>
                    <input id="email" name="email" placeholder="sarah.connor@faculty.edu" required type="email"/>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    {# Phone #}
                    <div class="group">
                        <label for="phoneNumber">Numéro de Téléphone</label>
                        <input id="phoneNumber" name="phoneNumber" placeholder="+33 6 12 34 56 78" type="tel"/>
                    </div>

                    {# Specialization #}
                    <div class="group">
                        <label for="specialization">Spécialisation</label>
                        <input id="specialization" name="specialization" placeholder="Ex. Physique Avancée" type="text"/>
                    </div>
                </div>

                {# Hire Date #}
                <div class="group">
                    <label for="hireDate">Date d'Embauche *</label>
                    <input id="hireDate" name="hireDate" value="{{ 'now'|date('Y-m-d') }}" required type="date"/>
                </div>
            </div>

            <div class="pt-8 border-t border-white/5 flex items-center justify-between">
                <a href="{{ path('teacher_index') }}" class="text-sm font-bold text-slate-500 hover:text-white transition-colors uppercase tracking-widest">
                    Annuler
                </a>
                <button type="submit" class="inline-flex items-center justify-center rounded-xl bg-primary px-8 py-4 text-base font-bold text-white shadow-xl hover:brightness-110 active:scale-[0.98] transition-all">
                    Inscrire l'Enseignant
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
