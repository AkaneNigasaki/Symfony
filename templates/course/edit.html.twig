{% extends 'base.html.twig' %}

{% block title %}Modifier le Cours - SchoolFlow{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-white tracking-tight flex items-center space-x-3">
            <i data-lucide="edit" class="w-8 h-8 text-amber-500"></i>
            <span>Modifier le Cours</span>
        </h1>
        <p class="mt-2 text-slate-400">Modification du cours <span class="text-white font-bold">{{ course.name }}</span>.</p>
    </div>

    <div class="bg-dark-gray border border-white/5 rounded-2xl overflow-hidden shadow-2xl">
        <form method="post" class="p-8 space-y-8">
            <div class="grid grid-cols-1 gap-8">
                {# School Selection #}
                <div class="group">
                    <label for="school">École *</label>
                    <select id="school" name="school" required class="focus:ring-amber-500/50 focus:border-amber-500/50">
                        {% for school in schools %}
                            <option value="{{ school.id }}" {% if course.school and course.school.id == school.id %}selected{% endif %}>{{ school.name }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {# Code #}
                    <div class="group md:col-span-1">
                        <label for="code">Code du Cours *</label>
                        <input id="code" name="code" value="{{ course.code }}" required type="text" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                    </div>

                    {# Name #}
                    <div class="group md:col-span-2">
                        <label for="name">Nom du Cours *</label>
                        <input id="name" name="name" value="{{ course.name }}" required type="text" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                    </div>
                </div>

                {# Description #}
                <div class="group">
                    <label for="description">Description</label>
                    <textarea id="description" name="description" rows="3" class="focus:ring-amber-500/50 focus:border-amber-500/50">{{ course.description }}</textarea>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    {# Credits #}
                    <div class="group">
                        <label for="credits">Crédits *</label>
                        <input id="credits" name="credits" value="{{ course.credits }}" required min="1" type="number" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                    </div>

                    {# Max Students #}
                    <div class="group">
                        <label for="maxStudents">Capacité Max *</label>
                        <input id="maxStudents" name="maxStudents" value="{{ course.maxStudents }}" required min="1" type="number" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    {# Teacher #}
                    <div class="group">
                        <label for="teacher">Enseignant *</label>
                        <select id="teacher" name="teacher" required class="focus:ring-amber-500/50 focus:border-amber-500/50">
                            {% for teacher in teachers %}
                                <option value="{{ teacher.id }}" {% if course.teacher and course.teacher.id == teacher.id %}selected{% endif %}>
                                    {{ teacher.fullName }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>

                    {# Classroom #}
                    <div class="group">
                        <label for="classroom">Salle de Classe</label>
                        <select id="classroom" name="classroom" class="focus:ring-amber-500/50 focus:border-amber-500/50">
                            <option value="">Sélectionner une salle...</option>
                            {% for classroom in classrooms %}
                                <option value="{{ classroom.id }}" {% if course.classroom and course.classroom.id == classroom.id %}selected{% endif %}>
                                    {{ classroom.name }} ({{ classroom.capacity }} places)
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                {# Semester #}
                <div class="group">
                    <label for="semester">Semestre *</label>
                    <input id="semester" name="semester" value="{{ course.semester }}" required type="text" class="focus:ring-amber-500/50 focus:border-amber-500/50"/>
                </div>
            </div>

            <div class="pt-8 border-t border-white/5 flex items-center justify-between">
                <a href="{{ path('course_show', {id: course.id}) }}" class="text-sm font-bold text-slate-500 hover:text-white transition-colors uppercase tracking-widest">
                    Annuler
                </a>
                <button type="submit" class="inline-flex items-center justify-center rounded-xl bg-amber-500 px-8 py-4 text-base font-bold text-white shadow-xl hover:brightness-110 active:scale-[0.98] transition-all">
                    Mettre à jour le Cours
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
