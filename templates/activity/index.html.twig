{% extends 'base.html.twig' %}

{% block title %}Activités Récentes - SchoolFlow{% endblock %}

{% block body %}
<div class="space-y-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8">
        <div>
            <h1 class="text-3xl font-bold text-white tracking-tight flex items-center space-x-3">
                <i data-lucide="activity" class="w-8 h-8 text-primary"></i>
                <span>Activités Récentes</span>
            </h1>
            <p class="mt-2 text-slate-400">Consultez l'historique des actions sur vos établissements.</p>
        </div>
    </div>

    <div class="bg-dark-gray border border-white/5 rounded-2xl overflow-hidden shadow-xl">
        <div class="px-6 py-5 border-b border-white/5 bg-white/2 flex items-center justify-between">
            <h3 class="font-semibold text-white tracking-tight flex items-center">
                <i data-lucide="clock" class="w-5 h-5 text-primary mr-2"></i>
                Historique des activités
            </h3>
            <span class="text-xs font-bold text-slate-500 uppercase tracking-widest">
                {{ activities|length }} activités
            </span>
        </div>

        <div class="divide-y divide-white/5">
            {% if activities is empty %}
                <div class="p-12 text-center">
                    <i data-lucide="inbox" class="w-16 h-16 text-slate-700 mx-auto mb-4"></i>
                    <p class="text-slate-500 text-sm">Aucune activité enregistrée pour le moment.</p>
                    <p class="text-slate-600 text-xs mt-2">Les actions sur vos établissements apparaîtront ici.</p>
                </div>
            {% else %}
                {% for activity in activities %}
                    <div class="p-5 flex items-start space-x-4 hover:bg-white/5 transition-colors group">
                        <div class="w-12 h-12 rounded-full flex items-center justify-center bg-primary/10 text-primary group-hover:bg-primary/20 transition-colors flex-shrink-0">
                            <i data-lucide="{{ activity.icon|default('circle') }}" class="w-5 h-5"></i>
                        </div>
                        <div class="flex-1 min-w-0">
                            <div class="flex items-start justify-between gap-4">
                                <div class="flex-1">
                                    <p class="text-sm text-white font-medium">{{ activity.description }}</p>
                                    <div class="flex items-center gap-3 mt-1">
                                        <span class="text-xs text-slate-500">
                                            <i data-lucide="calendar" class="w-3 h-3 inline mr-1"></i>
                                            {{ activity.createdAt|format_datetime('short', 'short', locale='fr') }}
                                        </span>
                                    </div>
                                </div>
                                <span class="text-xs text-slate-600 font-mono whitespace-nowrap">#{{ activity.id }}</span>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
