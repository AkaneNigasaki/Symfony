{% extends 'base.html.twig' %}

{% block title %}Nouvelle École - SchoolFlow{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-white tracking-tight flex items-center space-x-3">
            <i data-lucide="building" class="w-8 h-8 text-primary"></i>
            <span>Créer une Nouvelle École</span>
        </h1>
        <p class="mt-2 text-slate-400">Ajoutez un nouvel établissement au système de gestion.</p>
    </div>

    <div class="bg-dark-gray border border-white/5 rounded-2xl overflow-hidden shadow-2xl">
        <form method="post" class="p-8 space-y-8">
            <div class="grid grid-cols-1 gap-8">
                {# Name #}
                <div class="group">
                    <label for="name">Nom de l'École *</label>
                    <input id="name" name="name" placeholder="Ex. Lycée Saint-Exupéry" required type="text"/>
                </div>

                {# Address #}
                <div class="group">
                    <label for="address">Adresse</label>
                    <input id="address" name="address" placeholder="123 Rue de l'Éducation, Ville Savante" type="text"/>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    {# Phone #}
                    <div class="group">
                        <label for="phone">Téléphone</label>
                        <input id="phone" name="phone" placeholder="+1 234 567 890" type="text"/>
                    </div>

                    {# Email #}
                    <div class="group">
                        <label for="email">Email</label>
                        <input id="email" name="email" placeholder="contact@school.edu" type="email"/>
                    </div>
                </div>

                {# Description #}
                <div class="group">
                    <label for="description">Description</label>
                    <textarea id="description" name="description" placeholder="Décrivez les missions et l'histoire de l'école..." class="min-h-[120px]"></textarea>
                </div>
            </div>

            <div class="pt-8 border-t border-white/5 flex items-center justify-between">
                <a href="{{ path('school_index') }}" class="text-sm font-bold text-slate-500 hover:text-white transition-colors uppercase tracking-widest">
                    Annuler
                </a>
                <button type="submit" class="inline-flex items-center justify-center rounded-xl bg-primary px-8 py-4 text-base font-bold text-white shadow-xl hover:brightness-110 active:scale-[0.98] transition-all">
                    Créer l'École
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
