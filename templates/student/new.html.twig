{% extends 'base.html.twig' %}

{% block title %}Nouvel Étudiant - SchoolFlow{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-white tracking-tight flex items-center space-x-3">
            <i data-lucide="user-plus" class="w-8 h-8 text-primary"></i>
            <span>Créer un Nouvel Étudiant</span>
        </h1>
        <p class="mt-2 text-slate-400">Inscrire un nouvel étudiant dans une faculté.</p>
    </div>

    <div class="bg-dark-gray border border-white/5 rounded-2xl overflow-hidden shadow-2xl">
        <form method="post" class="p-8 space-y-8">
            <div class="grid grid-cols-1 gap-8">
                {# School Selection #}
                <div class="group">
                    <label for="school">École Assignée *</label>
                    <select id="school" name="school" required>
                        <option value="" class="bg-dark-gray text-slate-400">Sélectionner une école...</option>
                        {% for school in schools %}
                            <option value="{{ school.id }}" class="bg-dark-gray text-white">{{ school.name }}</option>
                        {% endfor %}
                    </select>
                    {% if schools is empty %}
                        <p class="text-xs text-amber-500 mt-2 flex items-center">
                            <i data-lucide="alert-triangle" class="w-4 h-4 mr-1"></i>
                            Aucune école trouvée. <a href="{{ path('school_new') }}" class="underline font-bold ml-1">Créez une école</a> d'abord.
                        </p>
                    {% endif %}
                </div>

                {# Student ID #}
                <div class="group">
                    <label for="studentId">ID Étudiant *</label>
                    <input id="studentId" name="studentId" placeholder="Ex. STU-2026-001" required type="text"/>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    {# First Name #}
                    <div class="group">
                        <label for="firstName">Prénom *</label>
                        <input id="firstName" name="firstName" placeholder="Ex. John" required type="text"/>
                    </div>

                    {# Last Name #}
                    <div class="group">
                        <label for="lastName">Nom *</label>
                        <input id="lastName" name="lastName" placeholder="Ex. Smith" required type="text"/>
                    </div>
                </div>

                {# Email #}
                <div class="group">
                    <label for="email">Adresse Email *</label>
                    <input id="email" name="email" placeholder="john.smith@gmail.com" required type="email"/>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    {# Date of Birth #}
                    <div class="group">
                        <label for="dateOfBirth">Date de Naissance *</label>
                        <input id="dateOfBirth" name="dateOfBirth" required type="date"/>
                    </div>

                    {# Enrollment Date #}
                    <div class="group">
                        <label for="enrollmentDate">Date d'Inscription *</label>
                        <input id="enrollmentDate" name="enrollmentDate" value="{{ 'now'|date('Y-m-d') }}" required type="date"/>
                    </div>
                </div>
            </div>

            <div class="pt-8 border-t border-white/5 flex items-center justify-between">
                <a href="{{ path('student_index') }}" class="text-sm font-bold text-slate-500 hover:text-white transition-colors uppercase tracking-widest">
                    Annuler
                </a>
                <button type="submit" class="inline-flex items-center justify-center rounded-xl bg-primary px-8 py-4 text-base font-bold text-white shadow-xl hover:brightness-110 active:scale-[0.98] transition-all">
                    Créer le Profil Étudiant
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
