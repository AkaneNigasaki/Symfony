{% extends 'base.html.twig' %}

{% block title %}Cours - SchoolFlow{% endblock %}

{% block body %}
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8">
    <div>
        <h1 class="text-3xl font-bold text-white tracking-tight flex items-center space-x-3">
            <i data-lucide="book" class="w-8 h-8 text-primary"></i>
            <span>Cours</span>
        </h1>
        <p class="mt-2 text-slate-400">Gérez les cours académiques et leurs affectations.</p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
        <a href="{{ path('course_new') }}" class="inline-flex items-center justify-center rounded-xl bg-primary px-4 py-3 text-sm font-bold text-white shadow-sm hover:brightness-110 transition-all">
            <i data-lucide="plus-circle" class="w-5 h-5 mr-2"></i>
            Ajouter un Nouveau Cours
        </a>
    </div>
</div>

<div class="bg-dark-gray border border-white/5 rounded-2xl overflow-hidden shadow-xl">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-white/5">
            <thead>
                <tr class="bg-white/2">
                    <th scope="col" class="py-4 pl-6 pr-3 text-left text-xs font-bold uppercase tracking-widest text-slate-500">Code & Nom</th>
                    <th scope="col" class="px-3 py-4 text-left text-xs font-bold uppercase tracking-widest text-slate-500">École</th>
                    <th scope="col" class="px-3 py-4 text-left text-xs font-bold uppercase tracking-widest text-slate-500">Enseignant</th>
                    <th scope="col" class="px-3 py-4 text-left text-xs font-bold uppercase tracking-widest text-slate-500">Inscriptions</th>
                    <th scope="col" class="px-3 py-4 text-left text-xs font-bold uppercase tracking-widest text-slate-500">Semestre</th>
                    <th scope="col" class="relative py-4 pl-3 pr-6 text-right text-xs font-bold uppercase tracking-widest text-slate-500">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-white/5">
                {% for course in courses %}
                    <tr class="group hover:bg-white/2 transition-colors">
                        <td class="whitespace-nowrap py-4 pl-6 pr-3 text-sm">
                            <div class="text-[10px] font-bold text-slate-500 uppercase tracking-tighter">{{ course.code }}</div>
                            <div class="font-bold text-white group-hover:text-primary transition-colors text-base">{{ course.name }}</div>
                        </td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm text-slate-400">
                            {% if course.school %}
                                <a href="{{ path('school_show', {id: course.school.id}) }}" class="hover:text-primary transition-colors">{{ course.school.name }}</a>
                            {% else %}
                                <span class="text-slate-600">—</span>
                            {% endif %}
                        </td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm text-slate-300 font-medium">
                            {{ course.teacher.fullName }}
                        </td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm">
                            <div class="flex items-center space-x-2">
                                <div class="flex-1 w-24 bg-white/5 rounded-full h-1.5 overflow-hidden">
                                    <div class="bg-primary h-full transition-all duration-500" style="width: {{ (course.enrolledStudentsCount / course.maxStudents * 100)|round }}%"></div>
                                </div>
                                <span class="text-xs text-slate-500">{{ course.enrolledStudentsCount }}/{{ course.maxStudents }}</span>
                            </div>
                        </td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm">
                            <span class="inline-flex items-center px-2 py-0.5 rounded-md text-[10px] font-bold bg-slate-800 text-slate-400 border border-white/5">
                                {{ course.semester }}
                            </span>
                        </td>
                        <td class="relative whitespace-nowrap py-4 pl-3 pr-6 text-right text-sm font-medium">
                            <div class="flex justify-end space-x-2">
                                <a href="{{ path('course_show', {id: course.id}) }}" class="p-2 bg-sky-500/10 text-sky-400 hover:bg-sky-500 hover:text-white rounded-lg transition-all" title="Voir">
                                    <i data-lucide="eye" class="w-4 h-4"></i>
                                </a>
                                <a href="{{ path('course_edit', {id: course.id}) }}" class="p-2 bg-amber-500/10 text-amber-500 hover:bg-amber-500 hover:text-white rounded-lg transition-all" title="Modifier">
                                    <i data-lucide="edit" class="w-4 h-4"></i>
                                </a>
                                <button type="button" 
                                    onclick="showConfirmModal('Êtes-vous sûr de vouloir supprimer ce cours ?', () => { 
                                        document.getElementById('delete-form-{{ course.id }}').submit(); 
                                    })" 
                                    class="p-2 bg-red-500/10 text-red-500 hover:bg-red-500 hover:text-white rounded-lg transition-all" 
                                    title="Supprimer">
                                    <i data-lucide="trash-2" class="w-4 h-4"></i>
                                </button>
                                <form id="delete-form-{{ course.id }}" method="post" action="{{ path('course_delete', {id: course.id}) }}" class="hidden">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ course.id) }}">
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="px-6 py-12 text-center text-slate-500 ">Aucun cours trouvé dans cet espace.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
